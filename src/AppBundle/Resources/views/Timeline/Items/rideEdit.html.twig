<li class="media list-group-item p-4">
    <img class="media-object d-flex align-self-start mr-3" src="{{ gravatarUrl(item.user) }}" />
    <div class="media-body">
        <div class="media-heading">
            <small class="float-right text-muted">
                {{ item.dateTime|date('d.m.Y H:i') }}&nbsp;Uhr
            </small>
            <h6>
                {{ item.user.username }}
            </h6>
        </div>

        <p>
            {{ item.user.username }} hat eine Tour editiert:
        </p>

        <div class="card mb-3">
            <div class="card-img-top" id="map-{{ item.uniqId }}"
                 data-lock-map="true"
                 data-map-marker-clickable="false"
                 data-map-marker-latitude="{{ item.ride.latitude }}"
                 data-map-center-latitude="{{ item.ride.latitude }}"
                 data-map-marker-longitude="{{ item.ride.longitude }}"
                 data-map-center-longitude="{{ item.ride.longitude }}"
                 data-map-zoomlevel="15"
                 style="height: 150px;">

            </div>

            <div class="card-body">
                <a href="{{ objectPath(item.ride) }}">
                    <h5 class="card-title">
                        {{ item.rideTitle }}
                    </h5>
                </a>

                {% if item.ride.description %}
                    <p class="card-text">
                        {{ item.ride.description|markdown }}
                    </p>
                {% endif %}
            </div>
        </div>
    </div>
</li>

<script type="text/javascript">
    CriticalMass.loadModule('AutoMap', 'map-{{ item.uniqId }}');
</script>

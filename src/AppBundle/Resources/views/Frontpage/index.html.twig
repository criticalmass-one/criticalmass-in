{% extends 'AppBundle:Template:StandardTemplate.html.twig' %}

{% set bootstrap4app = true %}

{% block title %}criticalmass.in{% endblock %}

{% block content %}
    <div class="container-fluid margin-bottom-medium">
        <div class="row">
            <div class="col-md-12">
                {% include 'AppBundle:Frontpage:_carousel.html.twig' with { 'frontpageTeaserList': frontpageTeaserList } %}
            </div>
        </div>
    </div>

    <div class="container margin-top-medium">
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="no-margin-top">
                            Hej, wir fahren Fahrrad!
                        </h1>

                        <p class="lead">
                            In fast jeder großen Stadt treffen sich am letzten Freitag im Monat Radfahrer zu einer
                            gemeinsamen Ausfahrt. Sei mit dabei und schau dir an, was es alles zu entdecken gibt.
                        </p>

                        <p class="text-center">
                            <a href="{{ path('caldera_criticalmass_intro') }}" class="btn btn-primary">
                                <i class="fa fa-bicycle"></i>
                                Erfahre mehr über criticalmass.in
                            </a>
                        </p>
                    </div>
                </div>

                <ul class="list-group media-list media-list-stream mb-4">
                    {{ timelineContent|raw }}
                </ul>

                <div class="row hidden-xs hidden-sm margin-top-medium">

                    <div class="col-md-12">

                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-12">
                        {{ include('AppBundle:Frontpage:_bikeright.html.twig') }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">
                                    Anzeige
                                </h3>
                            </div>
                            <div class="panel-body text-center" style="padding: 0;">
                                <!-- Revive Adserver Asynchronous JS Tag - Generated with Revive Adserver v4.1.3 -->
                                <ins data-revive-zoneid="20" data-revive-id="41009926173ca0d1c900a7dc0a6dd401"></ins>
                                <script async src="//adserver.caldera.cc/delivery/asyncjs.php"></script>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">
                                    Bald unterwegs
                                </h3>
                            </div>
                            <div class="panel-body">
                                <ul class="list-unstyled">
                                    {% for rideDate, rides in rideList %}
                                        <li>
                                            <h4>
                                                {{ rideDate|format_date('dd. MMMM YYYY') }}
                                            </h4>

                                            <ul>
                                                {% for ride in rides %}
                                                    <li>
                                                        <a href="{{ objectPath(ride) }}">
                                                            {{ ride.getFancyTitle() }}
                                                        </a>
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

<div class="row post margin-bottom-medium">
    <div class="col-md-12">
        <div class="media post">
            <span class="pull-left">
                {% if post.user.imageName %}
                <img class="media-object round-media-object"
                     src="{{ vich_uploader_asset(post.user, 'imageFile')|imagine_filter('user_profile_photo_small') }}"/>
                {% endif %}
            </span>

            <div class="media-body">
                <h4 class="media-heading username">
                    {% if post.getRide() %}
                        {{ post.getUser().getUsername() }} schreibt zu <a
                            href="{{ path('caldera_criticalmass_ride_show', { 'citySlug': post.getRide().getCity().getMainSlug().getSlug(), 'rideDate': post.getRide().getDateTime().format('Y-m-d') }) }}">{{ post.getRide().getFancyTitle() }}</a>:
                    {% elseif post.getCity() %}
                        {{ post.getUser().getUsername() }} schreibt Ã¼ber <a
                            href="{{ path('caldera_criticalmass_city_show', { 'citySlug': post.getCity().getMainSlug().getSlug() }) }}">{{ post.getCity().getTitle() }}</a>:
                    {% else %}
                        {{ post.getUser().getUsername() }} schreibt:
                    {% endif %}
                </h4>

                <time>{{ post.dateTime|date('d.m.Y H:i', 'Europe/Berlin') }}&nbsp;Uhr</time>
                {{ post.message|markdown }}
            </div>
        </div>
    </div>
</div>

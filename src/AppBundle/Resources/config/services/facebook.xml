<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true" autoconfigure="true" public="false">
            <bind key="$facebookAppId">%facebook.app_id%</bind>
            <bind key="$facebookAppSecret">%facebook.app_secret%</bind>
            <bind key="$facebookDefaultToken">%facebook.default_token%</bind>
        </defaults>

        <prototype namespace="AppBundle\Criticalmass\Facebook\"
                   resource="%kernel.project_dir%/src/AppBundle/Criticalmass/Facebook/*"/>
        <prototype namespace="AppBundle\Criticalmass\Facebook\Api\"
                   resource="%kernel.project_dir%/src/AppBundle/Criticalmass/Facebook/Api/*"/>
    </services>
</container>

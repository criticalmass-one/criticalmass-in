        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true" public="true">
            <tag name="social_network.network"/>
        </defaults>

        <prototype namespace="Criticalmass\Component\SocialNetwork\Network\"

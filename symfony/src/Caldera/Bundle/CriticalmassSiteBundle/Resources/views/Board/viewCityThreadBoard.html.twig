{% extends 'CalderaCriticalmassSiteBundle:Template:StandardTemplate.html.twig' %}

{% block title %}{% endblock %}

{% block breadcrumb %}
    <li>
        <a href="{{ path('caldera_criticalmass_board_overview') }}">
            Diskussionen
        </a>
    </li>
    <li class="active">
        Allgemeines über die {{ city.title }}
    </li>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <a href="" class="btn btn-success margin-top-medium pull-right">
                    <i class="fa fa-commenting"></i>
                    neues Thema beginnen
                </a>

                <h2>
                    Allgemeines über die {{ city.title }}
                </h2>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Titel
                            </th>
                            <th>
                                Autor
                            </th>
                            <th>
                                Antworten
                            </th>
                            <th>
                                letzter Beitrag
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for thread in threads %}
                        <tr>
                            <td>
                                <a href="{{ path(thread) }}">
                                    {{ thread.getTitle() }}
                                </a>
                            </td>
                            <td>
                                <img class="pull-left" style="margin-right: 5px;" src="{{ gravatarUrl(thread.getUser(), 36) }}" alt="..." />
                                von <strong>{{ thread.getUser().getUsername() }}</strong>
                            </td>
                            <td>
                                {{ thread.getPostNumber() }}
                            </td>
                            <td>
                                {% if thread.getLastPost() %}
                                    {% set lastPost = thread.getLastPost() %}
                                    <img class="pull-left" style="margin-right: 5px;" src="{{ gravatarUrl(lastPost.getUser(), 36) }}" alt="..." />
                                    von <strong>{{ lastPost.getUser().getUsername() }}</strong><br />
                                    {{ lastPost.dateTime.format('d.m.Y H:i') }}&nbsp;Uhr
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
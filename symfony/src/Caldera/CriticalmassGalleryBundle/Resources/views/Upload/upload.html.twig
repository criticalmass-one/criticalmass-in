{% block content %}
{% stylesheets
'@CalderaCriticalmassGalleryBundle/Resources/public/css/external/*.css'
filter="cssrewrite" %}
<link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
{% endstylesheets %}

{% javascripts
'@CalderaCriticalmassGalleryBundle/Resources/public/js/external/dropzone.min.js'
%}

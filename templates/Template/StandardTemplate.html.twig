{% extends 'Template/MasterTemplate.html.twig' %}

{% block masterContent %}
    {% include('Template/Navigation/_full_navigation.html.twig') %}

    {% include('Template/Includes/_github.html.twig') %}

    {% block breadcrumbContainer %}
        {% if block('breadcrumb') %}
        <div class="container pt-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('caldera_criticalmass_frontpage') }}">Critical Mass</a>
                </li>
                {% block breadcrumb %}{% endblock %}
            </ol>
        </div>
        {% endif %}
    {% endblock %}

    {{ render(controller('App\\Controller\\Template\\AlertController:showCurrentAlertsAction')) }}

    {% if app.user and app.user.deprecatedSocialLogin and app.request.attributes.get('_route') != 'criticalmass_user_profile_disconnect_social' %}
        <div class="container pt-4">
            <div class="row">
                <div class="col-md-12">
                    <div class="alert alert-warning">
                        Du hast dich über ein soziales Netzwerk angemeldet, das wir künftig nicht mehr unterstützen. <a href="{{ path('criticalmass_user_profile_disconnect_social') }}">Klicke hier</a>, um deinen Login mit Benutzername und Kennwort einzurichten — es dauert keine 60 Sekunden.
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    {% block content %}{% endblock %}

    {% include('Template/Includes/_footer.html.twig') %}
{% endblock %}

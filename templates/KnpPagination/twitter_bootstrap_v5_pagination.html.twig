{#
/**
 * Sliding pagination control implementation (Bootstrap 5).
 *
 * View that can be used with the pagination module
 * from the Twitter Bootstrap CSS Toolkit
 * https://getbootstrap.com/docs/5.3/components/pagination/
 */
#}
{% if pageCount > 1 %}
    <nav aria-label="Seiten-Navigation">
        <ul class="pagination justify-content-center">

            {# Previous #}
            {% if previous is defined %}
                <li class="page-item">
                    <a class="page-link"
                       rel="prev"
                       href="{{ path(route, query|merge({(pageParameterName): previous})) }}">
                        &laquo;&nbsp;{{ 'label_previous'|trans([], 'KnpPaginatorBundle') }}
                    </a>
                </li>
            {% else %}
                <li class="page-item disabled" aria-disabled="true">
                    <span class="page-link">
                        &laquo;&nbsp;{{ 'label_previous'|trans([], 'KnpPaginatorBundle') }}
                    </span>
                </li>
            {% endif %}

            {# Anfang: 1 … #}
            {% if startPage > 1 %}
                <li class="page-item">
                    <a class="page-link"
                       href="{{ path(route, query|merge({(pageParameterName): 1})) }}">
                        1
                    </a>
                </li>
                {% if startPage == 3 %}
                    <li class="page-item">
                        <a class="page-link"
                           href="{{ path(route, query|merge({(pageParameterName): 2})) }}">
                            2
                        </a>
                    </li>
                {% elseif startPage != 2 %}
                    <li class="page-item disabled" aria-disabled="true">
                        <span class="page-link">&hellip;</span>
                    </li>
                {% endif %}
            {% endif %}

            {# Mittelbereich #}
            {% for page in pagesInRange %}
                {% if page != current %}
                    <li class="page-item">
                        <a class="page-link"
                           href="{{ path(route, query|merge({(pageParameterName): page})) }}">
                            {{ page }}
                        </a>
                    </li>
                {% else %}
                    <li class="page-item active" aria-current="page">
                        <span class="page-link">{{ page }}</span>
                    </li>
                {% endif %}
            {% endfor %}

            {# Ende: … N #}
            {% if pageCount > endPage %}
                {% if pageCount > (endPage + 1) %}
                    {% if pageCount > (endPage + 2) %}
                        <li class="page-item disabled" aria-disabled="true">
                            <span class="page-link">&hellip;</span>
                        </li>
                    {% else %}
                        <li class="page-item">
                            <a class="page-link"
                               href="{{ path(route, query|merge({(pageParameterName): (pageCount - 1)})) }}">
                                {{ pageCount - 1 }}
                            </a>
                        </li>
                    {% endif %}
                {% endif %}
                <li class="page-item">
                    <a class="page-link"
                       href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}">
                        {{ pageCount }}
                    </a>
                </li>
            {% endif %}

            {# Next #}
            {% if next is defined %}
                <li class="page-item">
                    <a class="page-link"
                       rel="next"
                       href="{{ path(route, query|merge({(pageParameterName): next})) }}">
                        {{ 'label_next'|trans([], 'KnpPaginatorBundle') }}&nbsp;&raquo;
                    </a>
                </li>
            {% else %}
                <li class="page-item disabled" aria-disabled="true">
                    <span class="page-link">
                        {{ 'label_next'|trans([], 'KnpPaginatorBundle') }}&nbsp;&raquo;
                    </span>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}

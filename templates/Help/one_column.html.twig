{% extends 'Template/StandardTemplate.html.twig' %}

{% import 'Help/_macro.html.twig' as categoryMacro %}

{% block title %}{{ mainCategory.title }}{% endblock %}

{% block breadcrumb %}
    <li class="active">
        {{ mainCategory.title }}
    </li>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <h1>
                    {{ mainCategory.title }}
                </h1>

                {% if mainCategory.intro %}
                    <p class="lead">
                        {{ mainCategory.intro }}
                    </p>
                {% endif %}
            </div>
        </div>

        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                {{ categoryMacro.renderCategory(mainCategory) }}
            </div>
        </div>
    </div>
{% endblock %}

{% extends 'Template/StandardTemplate.html.twig' %}{% block title %}Fotogalerie{% endblock %}

{% import 'Bootstrap/bootstrap_macros.html.twig' as bootstrap %}

{% block breadcrumb %}
    {{ bootstrap.breadcrumb_item('Städteliste', path('caldera_criticalmass_city_list')) }}
    {{ bootstrap.breadcrumb_item('Fotogalerie', '', true) }}
{% endblock %}

{% block content %}
    <div class="container">
        {% set cityString = '' %}
        {% for city in cities %}
            {% set cityString = cityString ~ '<a href="' ~ object_path(city) ~ '">' ~ city.city ~ '</a>' %}

            {% if loop.revindex0 > 1 %}
                {% set cityString = cityString ~ ', ' %}
            {% endif %}

            {% if loop.revindex0 == 1 %}
                {% set cityString = cityString ~ ' und ' %}
            {% endif %}
        {% endfor %}

        <div class="row">
            <div class="col-12">
                <h2>
                    Fotogalerie
                </h2>

                <p class="lead">
                    Neugierig geworden? Hier siehst du ein paar zufällig ausgewählte Fotos von früheren Critical-Mass-Touren aus {{ cityString|raw }}. Viel Spaß beim Herumblättern!
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-12 photo-list">
                {% for photo in photos %}
                    <div class="col-6 col-sm-4 col-md-3 col-lg-3 text-center mb-2">
                        <a href="{{ object_path(photo) }}">
                            <img class="img-thumbnail img-fluid" src="{{ vich_uploader_asset(photo, 'imageFile')|imagine_filter('gallery_photo_thumb') }}"/>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

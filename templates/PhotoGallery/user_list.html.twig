{% extends 'Template/StandardTemplate.html.twig' %}
{% import 'Template/Macros/breadcrumb.html.twig' as breadcrumb %}

{% block title %}{{ 'gallery.user_list_title'|trans }}{% endblock %}

{% block breadcrumb %}
    {{ breadcrumb.active('gallery.user_list_breadcrumb'|trans) }}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>{{ 'gallery.user_list_heading'|trans }}</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <tr>
                        <th>{{ 'gallery.user_list_col_date'|trans }}</th>
                        <th>{{ 'gallery.user_list_col_city'|trans }}</th>
                        <th>{{ 'gallery.user_list_col_ride'|trans }}</th>
                        <th>{{ 'gallery.user_list_col_count'|trans }}</th>
                        <th>{{ 'gallery.user_list_col_options'|trans }}</th>
                    </tr>
                    {% for key, ride in result['rides'] %}
                        <tr>
                            <td>
                                {{ ride.dateTime.format('d. m. Y') }}
                            </td>
                            <td>
                                <a href="{{ object_path(ride.city) }}">
                                    {{ ride.city.getCity() }}
                                </a>
                            </td>
                            <td>
                                <a href="{{ object_path(ride) }}">
                                    {{ ride.title }}
                                </a>
                            </td>
                            <td>
                                <a href="{{ object_path(ride, 'caldera_criticalmass_photo_manage') }}">
                                    {{ result['counter'][key] }}
                                </a>
                            </td>
                            <td>
                                <div class="btn-group" role="group" aria-label="...">
                                    <a class="btn btn-secondary btn-xs" title="{{ 'gallery.download'|trans }}"
                                       href="{{ object_path(ride, 'caldera_criticalmass_photo_manage') }}">
                                        <i class="far fa-images"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}

                    {% if result['rides']|length == 0 %}
                        <td colspan="7" style="text-align: center;">{{ 'gallery.user_list_no_tracks'|trans }}</td>
                    {% endif %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}

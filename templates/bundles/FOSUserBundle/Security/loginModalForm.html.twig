<form action="{{ path("fos_user_security_check") }}" method="post" role="form" class="form-horizontal">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Login</h4>
    </div>
    <div class="modal-body">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

        <div class="form-group row">
            <label for="username" class="col-md-4 control-label">
                Dein Benutzername:
            </label>
            <div class="col-md-8">
                <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"/>
            </div>
        </div>

        <div class="form-group row">
            <label for="password" class="col-md-4 control-label">
                Dein Kennwort:
            </label>
            <div class="col-md-8">
                <input type="password" class="form-control" id="password" name="_password"/>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-offset-4 col-md-8 checkbox control-group">
                <label for="remember_me">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on"/> eingeloggt bleiben
                </label>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 text-center">
                <p>
                    Oder logge dich Ã¼ber eines dieser Netzwerke ein:
                </p>

                <div class="btn-group" role="group" aria-label="...">
                    <a class="btn btn-default" style="background-color: rgb(60, 90, 150); color: white;"
                       href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook' }) }}"
                       title="Sign in with Facebook">
                        <i class="fab fa-facebook-f" aria-hidden="true"></i>
                        Facebook
                    </a>
                    <a class="btn btn-default" style="background-color: rgb(249, 77, 31); color: white;"
                       href="{{ path('hwi_oauth_service_redirect', {'service': 'strava' }) }}"
                       title="Sign in with Strava">
                        <i class="fab fa-strava" aria-hidden="true"></i>
                        Strava
                    </a>
                    <a class="btn btn-default" style="background-color: rgb(57, 201, 214); color: white;"
                       href="{{ path('hwi_oauth_service_redirect', {'service': 'runkeeper' }) }}"
                       title="Sign in with Runkeeper">
                        <i class="fab fa-runkeeper" aria-hidden="true"></i>
                        Runkeeper
                    </a>
                    <a class="btn btn-default"
                       style="background-color: rgb(29, 161, 242); color: white;"
                       href="{{ path('hwi_oauth_service_redirect', {'service': 'twitter' }) }}"
                       title="Sign in with Twitter">
                        <i class="fab fa-twitter" aria-hidden="true"></i>
                        Twitter
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <div class="row">
            <div class="col-md-4">
                <a href="{{ path('fos_user_registration_register') }}">
                    Jetzt Registrieren?
                </a>
            </div>

            <div class="col-md-4">
                <a href="{{ path('fos_user_resetting_request') }}">
                    Kennwort vergessen?
                </a>
            </div>

            <div class="col-md-4">
                <button type="submit" id="_submit" name="_submit" class="btn btn-primary pull-right">
                    <i class="far fa-bicycle"></i>
                    Anmelden
                </button>
            </div>
        </div>
    </div>
</form>

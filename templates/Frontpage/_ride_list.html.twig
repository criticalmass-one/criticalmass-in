<div class="row d-none d-md-block">
    <div class="col-12">
        <div class="card mb-3">
            <div class="card-header">
                <h3 class="card-title mb-0">
                    Bald unterwegs
                </h3>
            </div>

            <div class="card-body">
                <ul class="list-unstyled">
                    {% for month in rideList %}
                        {% for day in month %}
                            <li class="mb-3">
                                <h5 class="mb-2">
                                    {{ day.dateTime|format_date('eeee, dd. MMMM YYYY') }}
                                </h5>

                                <ul class="list-unstyled ms-3">
                                    {% for ride in day %}
                                        {% include 'Common/Ride/simple_city_time_list_item.html.twig' with { ride: ride } %}
                                    {% endfor %}
                                </ul>
                            </li>
                        {% endfor %}
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>

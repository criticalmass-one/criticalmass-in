{# Ride List - Mobile-first mit horizontalem Scroll auf Mobile #}
<div class="cm-rides-scroll">
    {% for month in rideList %}
        {% for day in month %}
            {% for ride in day %}
                <a href="{{ object_path(ride) }}" class="cm-ride-card">
                    <div class="cm-ride-card__header">
                        <div class="cm-ride-card__date">
                            <span class="day">{{ ride.dateTime|date('d') }}</span>
                            <span class="month">{{ ride.dateTime|format_date('MMM') }}</span>
                        </div>
                        <div class="cm-ride-card__info">
                            <div class="cm-ride-card__city">
                                {% if ride.title %}
                                    {{ ride.title }}
                                {% else %}
                                    {{ ride.city.city }}
                                {% endif %}
                            </div>
                            <div class="cm-ride-card__time">
                                <i class="far fa-clock me-1"></i>
                                {{ ride.dateTime|date('H:i', ride.city.timezone) }} Uhr
                            </div>
                        </div>
                    </div>
                    <div class="cm-ride-card__details">
                        {% if ride.location %}
                            <span class="cm-ride-card__detail">
                                <i class="fas fa-map-marker-alt"></i>
                                {{ ride.location|length > 25 ? ride.location|slice(0, 25) ~ '...' : ride.location }}
                            </span>
                        {% endif %}
                        {% if ride.estimatedParticipants %}
                            <span class="cm-ride-card__detail">
                                <i class="fas fa-users"></i>
                                ~{{ ride.estimatedParticipants }}
                            </span>
                        {% endif %}
                    </div>
                </a>
            {% endfor %}
        {% endfor %}
    {% else %}
        <div class="cm-empty">
            <div class="cm-empty__icon">
                <i class="fas fa-calendar-xmark"></i>
            </div>
            <div class="cm-empty__title">Keine Touren gefunden</div>
            <div class="cm-empty__text">
                Aktuell sind keine bevorstehenden Touren eingetragen.
            </div>
        </div>
    {% endfor %}
</div>

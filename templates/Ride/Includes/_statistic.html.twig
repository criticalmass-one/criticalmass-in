{% set hasEstimations = ride.estimatedParticipants or ride.estimatedDistance or ride.estimatedDuration %}

{% if dateTime > ride.dateTime %}
    {% set pastRide = true %}
{% else %}
    {% set pastRide = false %}
{% endif %}

{% if pastRide %}
    <div class="card mb-3 shadow-sm">
        <div class="card-header bg-body-tertiary py-2">
            <h6 class="mb-0 fw-semibold">
                üìä Statistik
            </h6>
        </div>

        <div class="card-body">
            {% if hasEstimations %}
                <dl class="mb-0">
                    {% if ride.estimatedParticipants and ride.estimatedParticipants > 0 %}
                        <dt>Teilnehmer</dt>
                        <dd>{{ ride.estimatedParticipants|number_format(0) }}</dd>
                    {% endif %}

                    {% if ride.estimatedDistance and ride.estimatedDistance > 0 %}
                        <dt>Distanz</dt>
                        <dd>{{ ride.estimatedDistance|number_format(2) }}&nbsp;km</dd>
                    {% endif %}

                    {% if ride.getDurationInterval() and ride.getDurationInterval().format('%h:%i') != '0:0' %}
                        <dt>Dauer</dt>
                        <dd>{{ human_duration(ride.getEstimatedDurationInSeconds()) }}</dd>
                    {% endif %}

                    {% if ride.getAverageVelocity and ride.getAverageVelocity > 0 %}
                        <dt>Durchschnittsgeschwindigkeit</dt>
                        <dd>{{ ride.getAverageVelocity()|number_format(2) }}&nbsp;km/h</dd>
                    {% endif %}
                </dl>
            {% else %}
                <p class="mb-0 text-muted">
                    Noch keine Sch√§tzwerte vorhanden.
                </p>
            {% endif %}
        </div>

        <div class="card-footer bg-transparent border-0 pt-0">
            {% if app.user %}
                <button class="btn btn-success w-100"
                        data-bs-toggle="modal"
                        data-bs-target="#estimate-modal">
                    <i class="far fa-users"></i>
                    Teilnehmerzahl sch√§tzen
                </button>
            {% else %}
                <span class="btn btn-success w-100 modal-hint"
                      data-modal-hint-title="{{ 'hint_modal.ride.estimate_add_button.title'|trans }}"
                      data-modal-hint-text="{{ 'hint_modal.ride.estimate_add_button.text'|trans({'%city%': ride.city.city, '%dateTime%': ride.dateTime|date('d.m.Y')}) }}"
                      data-hint-modal-size="md">
                    <i class="far fa-users"></i>
                    Teilnehmerzahl sch√§tzen
                </span>
            {% endif %}
        </div>
    </div>

    {% if app.user %}
        <div class="modal fade" id="estimate-modal" tabindex="-1"
             aria-labelledby="estimate-modal-label" aria-hidden="true">
            <div class="modal-dialog modal-sm" role="document">
                <div class="modal-content">
                    {{ form_start(estimateForm) }}

                    <div class="modal-header">
                        <h5 class="modal-title" id="estimate-modal-label">Teilnehmerzahl sch√§tzen</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                    </div>

                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label" for="estimatedParticipants">
                                Gesch√§tzte Teilnehmerzahl:
                            </label>
                            {{ form_widget(estimateForm.estimatedParticipants, { 'attr' : { 'class': 'form-control' } }) }}
                        </div>
                    </div>

                    <div class="modal-footer">
                        <div class="btn-group">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                Abbrechen
                            </button>
                            <button type="submit" class="btn btn-success">
                                Speichern
                            </button>
                        </div>
                    </div>

                    {{ form_end(estimateForm) }}
                </div>
            </div>
        </div>
    {% endif %}
{% endif %}

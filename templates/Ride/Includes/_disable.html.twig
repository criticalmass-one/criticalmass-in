{% if app.user %}
<div class="modal fade" id="disable-modal" tabindex="-1" aria-labelledby="disable-modal-label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            {{ form_start(disableForm) }}
            <div class="modal-header border-0">
                <h5 class="modal-title" id="disable-modal-label">
                    <i class="far fa-ban text-danger me-2"></i>Tour deaktivieren
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Schließen"></button>
            </div>
            <div class="modal-body">
                <p class="text-muted mb-3">Bitte wähle einen Grund für die Deaktivierung:</p>

                {{ form_widget(disableForm.disabledReason) }}
            </div>

            <div class="modal-body border-top pt-3">
                <label class="form-label text-muted">Zusätzlicher Kommentar (optional)</label>
                {{ form_widget(disableForm.disabledReasonMessage, { 'attr': { 'class': 'form-control', 'rows': 3, 'placeholder': 'z.B. weitere Details zur Absage...' }}) }}
            </div>

            <div class="modal-footer border-0">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Abbrechen</button>
                <button type="submit" class="btn btn-danger">
                    <i class="far fa-ban me-1"></i>Tour deaktivieren
                </button>
            </div>
            {{ form_end(disableForm) }}
        </div>
    </div>
</div>
{% endif %}
{% extends 'Template/StandardTemplate.html.twig' %}
{% import 'Template/Macros/breadcrumb.html.twig' as breadcrumb %}

{% block title %}{{ ride.title }}{% endblock %}

{% block breadcrumb %}
    {{ breadcrumb.item('St√§dteliste', path('caldera_criticalmass_city_list')) }}
    {{ breadcrumb.item(city.city, object_path(city)) }}
    {{ breadcrumb.active(ride.title) }}
{% endblock %}

{% block bodyClass %}ride{% if not ride.enabled %} ride-disabled{% endif %}{% endblock %}

{% block content %}
    <div class="container ride" itemscope itemtype="http://schema.org/Event">
        {{ include('Flash/_flash.html.twig') }}

        {% include('Ride/Includes/_registrationHint.html.twig') %}

        {% include('Ride/Ride.html.twig') with { 'ride': ride, 'tracks': tracks, 'participation': participation, 'location': location, 'weatherForecast': weatherForecast, 'estimateForm': estimateForm } %}

        {% include('Ride/Includes/_pagination.html.twig') with { 'ride': ride } %}
    </div>
{% endblock %}

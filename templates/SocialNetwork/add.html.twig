{% extends 'Template/StandardTemplate.html.twig' %}

{% import '_macros/breadcrumb.html.twig' as bc %}

{% block breadcrumbs %}
    {{ bc.render(
        [
            { label: 'Städteliste', url: path('caldera_criticalmass_city_list') },
            { label: profileAble.city, url: object_path(profileAble) },
            { label: 'Soziale Netzwerke', url: object_path(profileAble, 'criticalmass_socialnetwork_city_list') },
            { label: 'Soziales Netzwerk editieren' },
            { label: 'Städteliste', url: path('caldera_criticalmass_city_list') },
            { label: profileAble.city.city, url: object_path(profileAble.city) },
            { label: profileAble.title, url: object_path(profileAble) },
            { label: 'Soziale Netzwerke', url: object_path(profileAble, 'criticalmass_socialnetwork_ride_list') },
            { label: 'Soziales Netzwerk editieren' },
        ],
        {
            homeLabel: 'Critical Mass',
            homeUrl: path('caldera_criticalmass_frontpage')
        }
    ) }}
{% endblock %}

{% block content %}
    <div class="container">

        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h2 class="mb-4">
                    Soziales Netzwerk hinzufügen
                </h2>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 offset-md-3">

                {{ form_start(form) }}

                {{ form_errors(form.identifier) }}

                <div class="mb-3">
                    <label class="form-label">Adresse:</label>
                    {{ form_widget(form.identifier, { attr: { class: 'form-control' } }) }}
                </div>

                <div class="mb-3">
                    <label class="form-label">Hauptkonto:</label>
                    {{ form_widget(form.mainNetwork, { attr: { class: 'form-control' } }) }}
                    <div class="form-text">
                        Handelt es sich bei diesem Konto um das Hauptkonto in diesem Netzwerk?
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <a href="" class="btn btn-secondary me-2">
                        Abbrechen
                    </a>
                    <button type="submit" class="btn btn-primary">
                        Speichern
                    </button>
                </div>

                {{ form_end(form) }}

            </div>
        </div>

    </div>
{% endblock %}

{% extends 'Template/StandardTemplate.html.twig' %}

{% block breadcrumb %}
    {% if profileAbleType == 'city' %}
        <li>
            <a href="{{ path('caldera_criticalmass_city_list') }}">Städteliste</a>
        </li>
        <li>
            <a href="{{ object_path(profileAble) }}">{{ profileAble.city }}</a>
        </li>
        <li>
            <a href="{{ object_path(profileAble, 'criticalmass_socialnetwork_city_list') }}">
                Soziale Netzwerke
            </a>
        </li>
        <li class="active">Soziales Netzwerk editieren</li>
    {% endif %}

    {% if profileAbleType == 'ride' %}
        <li>
            <a href="{{ path('caldera_criticalmass_city_list') }}">Städteliste</a>
        </li>
        <li>
            <a href="{{ object_path(profileAble.city) }}">{{ profileAble.city.city }}</a>
        </li>
        <li>
            <a href="{{ object_path(profileAble) }}">{{ profileAble.title }}</a>
        </li>
        <li>
            <a href="{{ object_path(profileAble, 'criticalmass_socialnetwork_ride_list') }}">
                Soziale Netzwerke
            </a>
        </li>
        <li class="active">Soziales Netzwerk editieren</li>
    {% endif %}
{% endblock %}

{% block content %}
    <div class="container">

        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h2 class="mb-4">
                    Soziales Netzwerk hinzufügen
                </h2>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 offset-md-3">

                {{ form_start(form) }}

                {{ form_errors(form.identifier) }}

                <div class="mb-3">
                    <label class="form-label">Adresse:</label>
                    {{ form_widget(form.identifier, { attr: { class: 'form-control' } }) }}
                </div>

                <div class="mb-3">
                    <label class="form-label">Hauptkonto:</label>
                    {{ form_widget(form.mainNetwork, { attr: { class: 'form-control' } }) }}
                    <div class="form-text">
                        Handelt es sich bei diesem Konto um das Hauptkonto in diesem Netzwerk?
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <a href="" class="btn btn-secondary me-2">
                        Abbrechen
                    </a>
                    <button type="submit" class="btn btn-primary">
                        Speichern
                    </button>
                </div>

                {{ form_end(form) }}

            </div>
        </div>

    </div>
{% endblock %}

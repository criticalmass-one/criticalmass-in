{% extends 'Template/StandardTemplate.html.twig' %}

{% block title %}Track von Strava importieren{% endblock %}

{% block breadcrumb %}
    <li>
        <a href="{{ path('caldera_criticalmass_city_list') }}">
            Städteliste
        </a>
    </li>
    <li>
        <a href="{{ object_path(ride.city) }}">
            {{ ride.city.city }}
        </a>
    </li>
    <li>
        <a href="{{ object_path(ride) }}">
            {{ ride.title }}
        </a>
    </li>
    <li class="active">
        Track importieren
    </li>
{% endblock %}

{% block content %}
    <div class="container">

        <div class="row">
            <div class="col-12">
                <h1 class="mb-3">
                    Wähle eine Aktivität
                </h1>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12">
                <p class="lead">
                    Am <strong>{{ ride.dateTime.format('d.m.Y') }}</strong> hast du die folgenden Aktivitäten mit Strava
                    aufgezeichnet. Bitte wähle die Aktivität aus, die du als Track importieren möchtest.
                </p>
            </div>
        </div>

        <div class="row">
            {% if activities is iterable and activities|length > 0 %}
                {% for activity in activities %}
                    <div class="col-md-4 mb-4">
                        <div class="mb-2">
                            <h3 class="h5">
                                {{ activity.name }}
                            </h3>
                        </div>

                        <div class="mb-2">
                            <div
                                    id="map-{{ activity.id }}"
                                    class="map"
                                    data-controller="map--map"
                                    style="height: 150px;"
                                    data-map--map-lock-map-value="true"
                                    data-map--map-polyline-value="{{ activity.map.summary_polyline }}"
                                    data-map--map-polyline-color-value="{{ app.user.color }}"
                            ></div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-4">
                                <dl class="mb-0">
                                    <dt>Distanz:</dt>
                                    <dd>{{ (activity.distance / 1000)|round(2) }}&nbsp;km</dd>
                                </dl>
                            </div>
                            <div class="col-4">
                                <dl class="mb-0">
                                    <dt>Start:</dt>
                                    <dd>{{ activity.start_date|date('H:i') }}&nbsp;Uhr</dd>
                                </dl>
                            </div>
                            <div class="col-4">
                                <dl class="mb-0">
                                    <dt>Dauer:</dt>
                                    <dd>{{ (activity.elapsed_time / 60)|round() }}&nbsp;Minuten</dd>
                                </dl>
                            </div>
                        </div>

                        <div class="text-center">
                            <a class="btn btn-success"
                               href="{{ object_path(ride, 'caldera_criticalmass_strava_import') }}?activityId={{ activity.id }}">
                                <i class="far fa-download"></i>
                                Track importieren
                            </a>
                        </div>
                    </div>
                {% endfor %}
            {% elseif activities is iterable %}
                <div class="col-12">
                    <div class="alert alert-warning" role="alert">
                        <strong>Keine Touren gefunden!</strong>
                        Offenbar hast du mit Strava am {{ ride.dateTime.format('d.m.Y') }} keine Touren aufgezeichnet.
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-danger" role="alert">
                        <strong>Hoppla!</strong>
                        Leider können wir momentan keine Touren von Strava auslesen — bitte versuche es später noch einmal.
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="row mt-4">
            <div class="col-12 text-end">
                <a href="{{ object_path(ride) }}" class="btn btn-secondary">
                    Abbrechen
                </a>
            </div>
        </div>

    </div>
{% endblock %}

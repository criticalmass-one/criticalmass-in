{% extends 'Template/StandardTemplate.html.twig' %}
{% import 'Template/Macros/breadcrumb.html.twig' as breadcrumb %}

{% block title %}{{ 'strava.title'|trans }}{% endblock %}

{% block breadcrumb %}
    {{ breadcrumb.item('city.breadcrumb_city_list'|trans, path('caldera_criticalmass_city_list')) }}
    {{ breadcrumb.item(ride.city.city, object_path(ride.city)) }}
    {{ breadcrumb.item(ride.title, object_path(ride)) }}
    {{ breadcrumb.active('strava.breadcrumb_import'|trans) }}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>
                    {{ 'strava.select_activity'|trans }}
                </h1>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <p>
                    {{ 'strava.activity_intro'|trans({'%date%': ride.dateTime.format('d.m.Y')}) }}
                </p>
            </div>
        </div>

        <div class="row">
            {% if activities is iterable and activities|length > 0 %}
                {% for activity in activities %}
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-12">
                                <h3>
                                    {{ activity.name }}
                                </h3>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div id="map-{{ activity.id }}"
                                     class="map"
                                     data-controller="map--map"
                                     style="height: 150px;"
                                     data-map--map-lock-map-value="true"
                                     data-map--map-polyline-value="{{ activity.map.summary_polyline }}"
                                     data-map--map-polyline-color-value="{{ app.user.color }}">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <dl>
                                    <dt>{{ 'strava.label_distance'|trans }}</dt>
                                    <dd>{{ (activity.distance / 1000)|round(2) }}&nbsp;km</dd>
                                </dl>
                            </div>
                            <div class="col-md-4">
                                <dl>
                                    <dt>{{ 'strava.label_start'|trans }}</dt>
                                    <dd>{{ activity.start_date|date('H:i') }}&nbsp;{{ 'common.time_suffix'|trans }}</dd>
                                </dl>
                            </div>
                            <div class="col-md-4">
                                <dl>
                                    <dt>{{ 'strava.label_duration'|trans }}</dt>
                                    <dd>{{ (activity.elapsed_time / 60)|round() }}&nbsp;{{ 'strava.minutes'|trans }}</dd>
                                </dl>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="text-center">
                                    <a class="btn btn-success" href="{{ object_path(ride, 'caldera_criticalmass_strava_import') }}?activityId={{ activity.id }}">
                                        {# TODO #}
                                        <i class="far fa-download"></i>
                                        {{ 'strava.import_track'|trans }}
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% elseif activities is iterable %}
                <div class="col-md-12">
                    <div class="alert alert-warning" role="alert">
                        {{ 'strava.no_activities'|trans({'%date%': ride.dateTime.format('d.m.Y')}) }}
                    </div>
                </div>
            {% else %}
                <div class="col-md-12">
                    <div class="alert alert-danger" role="alert">
                        {{ 'strava.error'|trans }}
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="row">
            <div class="col-md-12">
                <a href="{{ object_path(ride) }}" class="btn btn-secondary pull-right">
                    {{ 'common.cancel'|trans }}
                </a>
            </div>
        </div>
    </div>
{% endblock %}

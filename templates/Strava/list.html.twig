{% extends 'Template/StandardTemplate.html.twig' %}

{% block title %}Track von Strava importieren{% endblock %}

{% import '_macros/breadcrumb.html.twig' as bc %}

{% block breadcrumbs %}
    {{ bc.render(
        [
            { label: 'St√§dteliste', url: path('caldera_criticalmass_city_list') },
            { label: ride.city.city, url: object_path(ride.city) },
            { label: ride.title, url: object_path(ride) },
            { label: 'Track importieren' },
        ],
        {
            homeLabel: 'Critical Mass',
            homeUrl: path('caldera_criticalmass_frontpage')
        }
    ) }}
{% endblock %}

{% block content %}
    <div class="container">

        <div class="row">
            <div class="col-12">
                <h1 class="mb-3">
                    W√§hle eine Aktivit√§t
                </h1>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12">
                <p class="lead">
                    Am <strong>{{ ride.dateTime.format('d.m.Y') }}</strong> hast du die folgenden Aktivit√§ten mit Strava
                    aufgezeichnet. Bitte w√§hle die Aktivit√§t aus, die du als Track importieren m√∂chtest.
                </p>
            </div>
        </div>

        <div class="row g-4">
            {% if activities is iterable and activities|length > 0 %}
                {% for activity in activities %}
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-header bg-body-tertiary py-2">
                                <h6 class="mb-0 fw-semibold">
                                    üèÉ {{ activity.name }}
                                </h6>
                            </div>

                            <div class="card-body">
                                <div class="mb-3 overflow-hidden rounded">
                                    <div id="map-{{ activity.id }}"
                                         class="map"
                                         data-controller="map--map"
                                         style="height: 150px;"
                                         data-map--map-lock-map-value="true"
                                         data-map--map-polyline-value="{{ activity.map.summary_polyline }}"
                                         data-map--map-polyline-color-value="{{ app.user.color }}"
                                    ></div>
                                </div>

                                <div class="row text-center">
                                    <div class="col-4">
                                        <dl class="mb-0">
                                            <dt class="small text-muted">Distanz</dt>
                                            <dd class="mb-0 fw-semibold">
                                                {{ (activity.distance / 1000)|round(2) }}&nbsp;km
                                            </dd>
                                        </dl>
                                    </div>

                                    <div class="col-4">
                                        <dl class="mb-0">
                                            <dt class="small text-muted">Start</dt>
                                            <dd class="mb-0 fw-semibold">
                                                {{ activity.start_date|date('H:i') }}&nbsp;Uhr
                                            </dd>
                                        </dl>
                                    </div>

                                    <div class="col-4">
                                        <dl class="mb-0">
                                            <dt class="small text-muted">Dauer</dt>
                                            <dd class="mb-0 fw-semibold">
                                                {{ (activity.elapsed_time / 60)|round() }}&nbsp;Min
                                            </dd>
                                        </dl>
                                    </div>
                                </div>
                            </div>

                            <div class="card-footer bg-transparent border-0 pt-0">
                                <a class="btn btn-success w-100"
                                   href="{{ object_path(ride, 'caldera_criticalmass_strava_import') }}?activityId={{ activity.id }}">
                                    <i class="far fa-download"></i>
                                    Track importieren
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            {% elseif activities is iterable %}
                <div class="col-12">
                    <div class="alert alert-warning" role="alert">
                        <strong>Keine Touren gefunden!</strong>
                        Offenbar hast du mit Strava am {{ ride.dateTime.format('d.m.Y') }} keine Touren aufgezeichnet.
                    </div>
                </div>

            {% else %}
                <div class="col-12">
                    <div class="alert alert-danger" role="alert">
                        <strong>Hoppla!</strong>
                        Leider k√∂nnen wir momentan keine Touren von Strava auslesen ‚Äî bitte versuche es sp√§ter noch einmal.
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="row mt-4">
            <div class="col-12 text-end">
                <a href="{{ object_path(ride) }}" class="btn btn-secondary">
                    Abbrechen
                </a>
            </div>
        </div>

    </div>
{% endblock %}

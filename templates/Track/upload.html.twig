{% extends 'Template/StandardTemplate.html.twig' %}

{% block title %}Gpx-Datei hochladen{% endblock %}

{% import '_macros/breadcrumb.html.twig' as bc %}

{% block breadcrumbs %}
    {{ bc.render(
        [
            { label: 'StÃ¤dteliste', url: path('caldera_criticalmass_city_list') },
            { label: ride.city.city, url: object_path(ride.city) },
            { label: ride.title, url: object_path(ride) },
            { label: 'Track hochladen' },
        ],
        {
            homeLabel: 'Critical Mass',
            homeUrl: path('caldera_criticalmass_frontpage')
        }
    ) }}
{% endblock %}

{% block content %}
    <div class="container">

        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h2>
                    Gpx-Datei hochladen
                </h2>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6 offset-md-3">
                <p>
                    Wenn du deine Fahrt bei der <strong>{{ ride.city.title }}</strong> am
                    <strong>{{ ride.dateTime|date('d.m.Y', ride.city.timezone) }}</strong> aufgezeichnet hast, kannst du
                    hier deinen Track als GPX-Datei hochladen.
                </p>
            </div>
        </div>

        {{ form_start(form, {'attr': {'role': 'form', 'id': 'track-upload-form'}}) }}

        <div class="row mt-3">
            <div class="col-md-6 offset-md-3">
                <div class="card mb-3 shadow-sm">
                    <div class="card-header bg-body-tertiary py-2">
                        <h6 class="mb-0 fw-semibold">
                            ðŸ“Ž GPX-Datei hochladen
                        </h6>
                    </div>

                    <div class="card-body">
                        {% if errorMessage %}
                            <div class="alert alert-danger mb-3" role="alert">
                                <strong>Hochladen fehlgeschlagen :(</strong>
                                {{ errorMessage }}
                            </div>
                        {% endif %}

                        <div class="mb-0">
                            <label class="form-label">
                                Datei
                            </label>

                            {{ form_widget(form.trackFile, { 'attr': { 'class': 'form-control' } }) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-6 offset-md-3">
                <div class="btn-group float-end" role="group" aria-label="Track-Aktionen">
                    <button type="submit"
                            class="btn btn-success disable-after-submit"
                            data-disabled-message="Bitte wartenâ€¦">
                        Track hochladen
                    </button>
                    <a href="{{ object_path(ride) }}" class="btn btn-secondary">
                        Abbrechen
                    </a>
                </div>
            </div>
        </div>

        {{ form_end(form) }}

    </div>
{% endblock %}

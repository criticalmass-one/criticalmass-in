{% extends 'Template/StandardTemplate.html.twig' %}{% block title %}Gpx-Datei hochladen{% endblock %}

{% import 'Bootstrap/bootstrap_macros.html.twig' as bootstrap %}

{% block breadcrumb %}
    {{ bootstrap.breadcrumb_item('St√§dteliste', objectPath('caldera_criticalmass_city_list')) }}
    {{ bootstrap.breadcrumb_item(ride.city.city, objectPath(ride.city)) }}
    {{ bootstrap.breadcrumb_item(ride.title, objectPath(ride)) }}
    {{ bootstrap.breadcrumb_item('Track hochladen', '', true) }}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-8 offset-md-2">
                <h2>
                    Gpx-Datei hochladen
                </h2>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-md-8 offset-md-2">
                <p>
                    Wenn du deine Fahrt bei der <strong>{{ ride.city.title }}</strong> am <strong>{{ ride.dateTime|date('d.m.Y', ride.city.timezone) }}</strong> aufgezeichnet hast, kannst du
                    hier deinen Track als GPX-Datei hochladen.
                </p>
            </div>
        </div>

        {{ form_start(form, {'attr': {'role': 'form', 'id': 'track-upload-form'}}) }}

        <div class="row">
            <div class="col-md-6 col-offset-md-3">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            Gpx-Datei hochladen
                        </h3>
                    </div>
                    <div class="panel-body">
                        {% if errorMessage %}
                            <div class="row">
                                <div class="col-12 col-md-8 offset-md-2">
                                    <div class="alert alert-danger" role="alert">
                                        <strong>Hochladen fehlgeschlagen :(</strong>
                                        {{ errorMessage }}
                                    </div>
                                </div>
                            </div>
                        {% endif %}

                        <div class="row">
                            <div class="col-12 col-md-8 offset-md-2">
                                <div class="form-group">
                                    <label for="">Datei:</label>
                                    {{ form_widget(form.trackFile, {'attr': {'class': 'form-control' }}) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-md-8 offset-md-2">
                <div class="btn-group pull-right" role="group" aria-label="...">
                    <button id="track-upload-button" type="submit" class="btn btn-primary">
                        Track hochladen
                    </button>
                    <a href="{{ object_path(ride) }}" class="btn btn-secondary">
                        Abbrechen
                    </a>
                </div>
            </div>
        </div>

        {{ form_end(form) }}

    </div>
{% endblock %}

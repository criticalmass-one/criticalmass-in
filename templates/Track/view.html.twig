{% extends 'Template/StandardTemplate.html.twig' %}

{% block title %}Deine Tracks{% endblock %}

{% import '_macros/breadcrumb.html.twig' as bc %}

{% block breadcrumbs %}
    {{ bc.render(
        [
            { label: 'Dein Benutzerkonto', url: path('criticalmass_user_usermanagement') },
            { label: 'Deine Tracks', url: path('caldera_criticalmass_track_list') },
            { label: 'Track anzeigen' },
        ],
        {
            homeLabel: 'Critical Mass',
            homeUrl: path('caldera_criticalmass_frontpage')
        }
    ) }}
{% endblock %}

{% block content %}
    <div class="container main-container">
        <div class="row">
            <div class="col-md-12">
                {% if track.getRide().getTitle() %}
                    <h1>{{ track.getRide().getTitle() }}</h1>
                {% else %}
                    <h1>{{ track.getRide().getCity().getTitle() }}</h1>
                {% endif %}
            </div>
        </div>

        {% if not track.reviewed %}
            <div class="row">
                <div class="col-md-12">
                    <div class="alert alert-danger">
                        <div class="btn-group float-end" role="group" aria-label="Track-Aktionen">
                            <a class="btn btn-success"
                               href="{{ object_path(track, 'caldera_criticalmass_track_range') }}">
                                <i class="far fa-cut"></i>&nbsp;Track beschneiden
                            </a>
                            <a class="btn btn-secondary"
                               href="{{ object_path(track, 'caldera_criticalmass_track_approve') }}">
                                <i class="far fa-check"></i>&nbsp;Track bestätigen
                            </a>
                        </div>

                        <strong>
                            Dein Track wurde noch nicht bestätigt!
                        </strong>
                        <br/>
                        Bitte bestägtige, dass dein Track nur den tatsächlichen Routenverlauf der Critical Mass abbildet
                        und etwaige An- und Abfahrten nicht enthalten sind. Du kannst deinen Track
                        <a href="{{ object_path(track, 'caldera_criticalmass_track_range') }}">ganz einfach online
                            beschneiden</a>.
                    </div>
                </div>
            </div>
        {% endif %}

        <div class="row">
            <div class="col-md-12">
                <div
                        id="map"
                        class="map"
                        style="height: 350px;"
                        data-controller="map--map"
                        data-map--polyline="{{ track.polyline }}"
                        data-map--polyline-color="{{ track.user.color }}"
                ></div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-3">
                <dl>
                    <dt>
                        Tour:
                    </dt>
                    <dd>
                        <a href="{{ object_path(track.ride) }}">
                            {{ track.ride.title }}
                        </a>
                    </dd>
                </dl>
            </div>

            <div class="col-md-2">
                <dl>
                    <dt>
                        Datum:
                    </dt>
                    <dd>
                        {{ track.ride.dateTime|date('d.m.Y H:i', track.ride.city.timezone) }}&nbsp;Uhr
                    </dd>
                </dl>
            </div>

            <div class="col-md-3">
                <dl>
                    <dt>
                        Treffpunkt:
                    </dt>
                    <dd>
                        {% if track.ride.location and track.ride.latitude and track.ride.longitude %}
                            {{ track.ride.location }}
                        {% else %}
                            nicht bekannt
                        {% endif %}
                    </dd>
                </dl>
            </div>

            <div class="col-md-2">
                <dl>
                    <dt>
                        Distanz:
                    </dt>
                    <dd>
                        {{ track.distance|number_format(2) }}&nbsp;km
                    </dd>
                </dl>
            </div>

            <div class="col-md-2">
                <dl>
                    <dt>
                        Dauer:
                    </dt>
                    <dd>
                        {{ human_duration(track.getDurationInSeconds()) }}
                    </dd>
                </dl>
            </div>
        </div>

        {% set previous_track = previous_entity(track) %}
        {% set next_track = next_entity(track) %}
        <div class="row mt-4">
            <div class="col-md-12">
                <nav aria-label="Track-Navigation">
                    <ul class="pagination justify-content-between mb-0">
                        {% if previous_track %}
                            <li class="page-item">
                                <a class="page-link" href="{{ object_path(previous_track) }}">
                                    &larr; Voriger Track
                                </a>
                            </li>
                        {% else %}
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                                    &larr; Voriger Track
                                </a>
                            </li>
                        {% endif %}

                        {% if next_track %}
                            <li class="page-item">
                                <a class="page-link" href="{{ object_path(next_track) }}">
                                    Nächster Track &rarr;
                                </a>
                            </li>
                        {% else %}
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                                    Nächster Track &rarr;
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}

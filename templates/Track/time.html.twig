{% extends 'Template/StandardTemplate.html.twig' %}

{% block title %}Zeit anpassen{% endblock %}

{% import '_macros/breadcrumb.html.twig' as bc %}

{% block breadcrumbs %}
    {{ bc.render(
        [
            { label: 'Dein Benutzerkonto', url: path('criticalmass_user_usermanagement') },
            { label: 'Deine Tracks', url: path('caldera_criticalmass_track_list') },
            { label: 'Zeit anpassen' },
        ],
        {
            homeLabel: 'Critical Mass',
            homeUrl: path('caldera_criticalmass_frontpage')
        }
    ) }}
{% endblock %}

{% block content %}
    <div class="container">

        <div class="row">
            <div class="col-12">
                <h1>
                    Zeit anpassen
                </h1>

                <p class="lead">
                    Falls dein Aufzeichnungsger√§t aus irgendeinem Grunde eine falsche Uhrzeit bei deinem GPX-Track
                    angegeben haben sollte, kannst du hier den Start-Zeitpunkt deines Tracks verschieben.
                </p>
            </div>
        </div>

        {{ form_start(form) }}

        <div class="row g-4">
            <div class="col-md-5 offset-md-1">
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-body-tertiary py-2">
                        <h6 class="mb-0 fw-semibold">
                            üï∞Ô∏è Alte Uhrzeit
                        </h6>
                    </div>

                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">Datum</label>
                            <input class="form-control" type="text" disabled="disabled"
                                   value="{{ track.startDate.format('d.m.Y') }}"/>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Uhrzeit</label>
                            <input class="form-control" type="text" disabled="disabled"
                                   value="{{ track.startDate.format('H:i') }}"/>
                        </div>

                        <div class="mb-0">
                            <label class="form-label">Zeitzone</label>
                            <input class="form-control" type="text" disabled="disabled"
                                   value="{{ track.ride.city.timezone }}"/>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-5">
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-body-tertiary py-2">
                        <h6 class="mb-0 fw-semibold">
                            ‚è±Ô∏è Neue Uhrzeit
                        </h6>
                    </div>

                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">Datum</label>
                            {{ form_widget(form.startDate, {
                                'attr' : {
                                    'class': 'form-control' ~ (form_errors(form.startDate) ? ' is-invalid' : '')
                                }
                            }) }}

                            {% if form_errors(form.startDate) %}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.startDate) }}
                                </div>
                            {% endif %}
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Uhrzeit</label>
                            {{ form_widget(form.startTime, {
                                'attr' : {
                                    'class': 'form-control' ~ (form_errors(form.startTime) ? ' is-invalid' : '')
                                }
                            }) }}

                            {% if form_errors(form.startTime) %}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.startTime) }}
                                </div>
                            {% endif %}
                        </div>

                        <div class="mb-0">
                            <label class="form-label">Zeitzone</label>
                            <input class="form-control" type="text" disabled="disabled"
                                   value="{{ track.ride.city.timezone }}"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-12 text-center">
                <div class="btn-group" role="group" aria-label="Zeit anpassen Aktionen">
                    <a href="{{ path('caldera_criticalmass_track_list') }}" class="btn btn-secondary">
                        Abbrechen
                    </a>
                    <button type="submit" class="btn btn-success">
                        Speichern
                    </button>
                </div>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}

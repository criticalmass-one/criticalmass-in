{% extends 'Template/StandardTemplate.html.twig' %}

{% block title %}{{ promotion.title }}{% endblock %}

{% block content %}
    <div class="container">
        {% if rideList|length > 0 and promotion.hasMap %}
            <div class="row">
                <div class="col-md-12">
                    <div class="map" id="promotion-map" data-popup-template-id="ride-popup" data-api-type="ride" data-api-query="{{ path('caldera_criticalmass_rest_ride_list') ~ '?' ~ promotion.query|raw }}&extended=true" style="height: 350px;"></div>
                </div>
            </div>
        {% endif %}

        <div class="row">
            <div class="col-md-12">
                <h2>
                    {{ promotion.title }}
                </h2>
            </div>
        </div>

        {% if promotion.description %}
            <div class="row">
                <div class="col-md-12">
                    {{ promotion.description|markdown }}
                </div>
            </div>
        {% endif %}

        <div class="row">
            <div class="col-md-12">
                <table class="table data-table" id="ride-table">
                    <thead>
                    <tr>
                        <th>Datum</th>
                        <th>Uhrzeit</th>
                        <th>Stadt</th>
                        <th>Titel</th>
                        <th>Treffpunkt</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for ride in rideList %}
                        <tr>
                            <td>
                                {{ ride.dateTime|date('d.m.Y') }}
                            </td>

                            <td>
                                {{ ride.dateTime|date('H:i') }}&nbsp;Uhr
                            </td>

                            <td>
                                <a href="{{ object_path(ride.city) }}" title="zur Seite der Stadt {{ ride.city.city }}">
                                    {{ ride.city.city }}
                                </a>
                            </td>

                            <td>
                                <a href="{{ object_path(ride) }}" title="zur Seite der Tour">
                                    {{ ride.title }}
                                </a>
                            </td>

                            <td>
                                {{ ride.location }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {% verbatim %}
<template id="ride-popup">
  <div class="popup">
    <h3 class="popup__title">{{title}}</h3>

    <div class="popup__meta">
      <div><strong>Datum:</strong> {{formatDateLocal this}}</div>
      <div><strong>Uhrzeit:</strong> {{formatTimeLocal this}}</div>
      {{#if location}}
        <div><strong>Treffpunkt:</strong> {{location}}</div>
      {{/if}}
    </div>

    <div class="popup__actions" style="margin-top: .5rem;">
      <a class="btn btn-primary" href="{{rideUrl this}}">zur Tour</a>
    </div>
  </div>
</template>
{% endverbatim %}
{% endblock %}


<div role="tabpanel" class="tab-pane fade show active" id="details" aria-labelledby="details-tab">
    {% include 'Ride/Includes/_disable.html.twig' with { 'ride': ride, 'disableForm': disableForm } %}

    {# Aktions-Buttons für angemeldete Benutzer #}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="mb-0">
            <i class="far fa-info-circle text-muted me-2"></i>
            Über diese Tour
        </h4>
        <div class="btn-group">
            {% if app.user %}
                {% if not ride.enabled %}
                    <form method="post" action="{{ object_path(ride, 'caldera_criticalmass_ride_enable') }}" class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('ride_enable_' ~ ride.id) }}">
                        <button type="submit" class="btn btn-success btn-sm" title="Tour freischalten">
                            <i class="far fa-unlock-alt me-1"></i>
                            Aktivieren
                        </button>
                    </form>
                {% else %}
                    <a class="btn btn-outline-primary btn-sm" href="{{ object_path(ride, 'caldera_criticalmass_ride_edit') }}" title="Tour bearbeiten">
                        <i class="far fa-edit me-1"></i>
                        Bearbeiten
                    </a>
                {% endif %}
                <button type="button" class="btn btn-outline-primary btn-sm dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="visually-hidden">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                        <a class="dropdown-item" href="{{ object_path(ride, 'criticalmass_socialnetwork_ride_list') }}">
                            <i class="far fa-share-alt me-2"></i>Soziale Netzwerke
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="{{ object_path(ride, 'caldera_criticalmass_ride_socialpreview') }}">
                            <i class="far fa-eye me-2"></i>Social-Media-Vorschau
                        </a>
                    </li>
                    {% if ride.enabled %}
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item text-danger" href="#" data-bs-toggle="modal" data-bs-target="#disable-modal">
                                <i class="far fa-ban me-2"></i>Tour deaktivieren
                            </a>
                        </li>
                    {% endif %}
                </ul>
            {% else %}
                <button type="button" class="btn btn-outline-primary btn-sm"
                    data-controller="hint-modal"
                    data-modal-hint-title="{{ 'hint_modal.ride.edit_button.title'|trans }}"
                    data-modal-hint-text="{{ 'hint_modal.ride.edit_button.text'|trans({'%city%': ride.city.city, '%dateTime%': ride.dateTime|date('d.m.Y')}) }}"
                    data-modal-hint-size="md">
                    <i class="far fa-edit me-1"></i>
                    Bearbeiten
                </button>
            {% endif %}
        </div>
    </div>

    {# Hauptinhalt: Beschreibung oder Hinweise #}
    {% if ride.description and ride.enabled %}
        <div itemprop="description" class="mb-4">
            {{ ride.description|markdown }}
        </div>
    {% elseif ride.enabled %}
        <div class="card bg-light border-0 mb-4">
            <div class="card-body">
                <div class="d-flex">
                    <div class="flex-shrink-0">
                        <i class="far fa-lightbulb fa-2x text-info"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h5 class="card-title">Diese Tour braucht noch Infos</h5>
                        <p class="card-text text-muted">
                            Bislang hat noch niemand Details zu dieser Tour hinterlegt. Hilf mit und ergänze:
                        </p>
                        <ul class="text-muted mb-3">
                            <li>Gibt es ein Motto für diese Tour?</li>
                            <li>Neuigkeiten oder Termine für den Radverkehr?</li>
                        </ul>
                        <a href="{{ object_path(ride, 'caldera_criticalmass_ride_edit') }}" class="btn btn-primary">
                            <i class="far fa-edit me-1"></i>Tour ergänzen
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="alert alert-warning border-0" id="ride-disabled-reason">
            <div class="d-flex">
                <div class="flex-shrink-0">
                    <i class="far fa-exclamation-triangle fa-2x"></i>
                </div>
                <div class="flex-grow-1 ms-3">
                    <h5 class="alert-heading">Tour abgesagt</h5>
                    <p class="mb-0">
                        {% if ride.disabledReason is not null and ride.disabledReason.value == 'DUPLICATE' %}
                            Diese Tour ist ein Duplikat einer anderen Tour dieses Monats.
                        {% elseif ride.disabledReason is not null and ride.disabledReason.value == 'WRONG_WEBSITE_HANDLING' %}
                            Diese Tour wurde mit falschen Daten angelegt.
                        {% elseif ride.disabledReason is not null and ride.disabledReason.value == 'WRONG_AUTO_GENERATION' %}
                            Diese Tour wurde fehlerhafterweise automatisch generiert.
                        {% elseif ride.disabledReason is not null and ride.disabledReason.value == 'CANCELLED_WEATHER' %}
                            Diese Tour wurde witterungsbedingt abgesagt.
                        {% elseif ride.disabledReason is not null and ride.disabledReason.value == 'CANCELLED_PARTICIPANTS' %}
                            Diese Tour fand aufgrund geringer Teilnehmerzahlen nicht statt.
                        {% elseif ride.disabledReason is not null and ride.disabledReason.value == 'CANCELLED_AUTHORITIES' %}
                            Diese Tour wurde von der Polizei oder anderen Behörden untersagt.
                        {% elseif ride.disabledReason is not null and ride.disabledReason.value == 'CANCELLED' %}
                            Diese Tour wurde abgesagt.
                        {% endif %}
                    </p>
                    {% if ride.disabledReasonMessage %}
                        <hr>
                        <div class="mb-0">{{ ride.disabledReasonMessage|markdown }}</div>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endif %}

    {# Social Media Links #}
    {% include 'Ride/Includes/_socialMedia.html.twig' with { 'ride': ride } %}
</div>

<div role="tabpanel" class="tab-pane fade show active" id="details" aria-labelledby="details-tab">
    {% include 'Ride/Includes/_disable.html.twig' with { 'ride': ride, 'disableForm': disableForm } %}

    {# Aktions-Buttons f√ºr angemeldete Benutzer #}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="mb-0">
            <i class="far fa-info-circle text-muted me-2"></i>
            {{ 'ride.tabs.details.about_title'|trans }}
        </h4>
        <div class="btn-group">
            {% if app.user %}
                {% if not ride.enabled %}
                    <a class="btn btn-success btn-sm" href="{{ object_path(ride, 'caldera_criticalmass_ride_enable') }}" title="{{ 'ride.tabs.details.enable_title'|trans }}">
                        <i class="far fa-unlock-alt me-1"></i>
                        {{ 'ride.tabs.details.enable_button'|trans }}
                    </a>
                {% else %}
                    <a class="btn btn-outline-primary btn-sm" href="{{ object_path(ride, 'caldera_criticalmass_ride_edit') }}" title="{{ 'ride.tabs.details.edit_title'|trans }}">
                        <i class="far fa-edit me-1"></i>
                        {{ 'ride.tabs.details.edit_button'|trans }}
                    </a>
                {% endif %}
                <button type="button" class="btn btn-outline-primary btn-sm dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="visually-hidden">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                        <a class="dropdown-item" href="{{ object_path(ride, 'criticalmass_socialnetwork_ride_list') }}">
                            <i class="far fa-share-alt me-2"></i>{{ 'ride.tabs.details.manage_social'|trans }}
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="{{ object_path(ride, 'caldera_criticalmass_ride_socialpreview') }}">
                            <i class="far fa-eye me-2"></i>{{ 'ride.tabs.details.social_preview'|trans }}
                        </a>
                    </li>
                    {% if ride.enabled %}
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item text-danger" href="#" data-bs-toggle="modal" data-bs-target="#disable-modal">
                                <i class="far fa-ban me-2"></i>{{ 'ride.tabs.details.disable_link'|trans }}
                            </a>
                        </li>
                    {% endif %}
                </ul>
            {% else %}
                <button type="button" class="btn btn-outline-primary btn-sm"
                    data-controller="hint-modal"
                    data-modal-hint-title="{{ 'hint_modal.ride.edit_button.title'|trans }}"
                    data-modal-hint-text="{{ 'hint_modal.ride.edit_button.text'|trans({'%city%': ride.city.city, '%dateTime%': ride.dateTime|date('d.m.Y')}) }}"
                    data-modal-hint-size="md">
                    <i class="far fa-edit me-1"></i>
                    {{ 'ride.tabs.details.edit_button'|trans }}
                </button>
            {% endif %}
        </div>
    </div>

    {# Hauptinhalt: Beschreibung oder Hinweise #}
    {% if ride.description and ride.enabled %}
        <div itemprop="description" class="mb-4">
            {{ ride.description|markdown }}
        </div>
    {% elseif ride.enabled %}
        <div class="card bg-light border-0 mb-4">
            <div class="card-body">
                <div class="d-flex">
                    <div class="flex-shrink-0">
                        <i class="far fa-lightbulb fa-2x text-info"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h5 class="card-title">{{ 'ride.tabs.details.no_description_heading'|trans }}</h5>
                        <p class="card-text text-muted">
                            {{ 'ride.tabs.details.no_description_text'|trans }}
                        </p>
                        <ul class="text-muted mb-3">
                            <li>{{ 'ride.tabs.details.no_description_motto'|trans }}</li>
                            <li>{{ 'ride.tabs.details.no_description_news'|trans }}</li>
                        </ul>
                        <a href="{{ object_path(ride, 'caldera_criticalmass_ride_edit') }}" class="btn btn-primary">
                            <i class="far fa-edit me-1"></i>{{ 'ride.tabs.details.edit_button'|trans }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="alert alert-warning border-0" id="ride-disabled-reason">
            <div class="d-flex">
                <div class="flex-shrink-0">
                    <i class="far fa-exclamation-triangle fa-2x"></i>
                </div>
                <div class="flex-grow-1 ms-3">
                    <h5 class="alert-heading">{{ 'ride.tabs.details.disabled_heading'|trans }}</h5>
                    <p class="mb-0">
                        {% if ride.disabledReason == 'DUPLICATE'|enum_constant('RideDisabledReasonType') %}
                            {{ 'ride.tabs.details.disabled_reason_duplicate'|trans }}
                        {% elseif ride.disabledReason == 'WRONG_WEBSITE_HANDLING'|enum_constant('RideDisabledReasonType') %}
                            {{ 'ride.tabs.details.disabled_reason_wrong_website'|trans }}
                        {% elseif ride.disabledReason == 'WRONG_AUTO_GNERATION'|enum_constant('RideDisabledReasonType') %}
                            {{ 'ride.tabs.details.disabled_reason_wrong_auto'|trans }}
                        {% elseif ride.disabledReason == 'CANCELLED_WEATHER'|enum_constant('RideDisabledReasonType') %}
                            {{ 'ride.tabs.details.disabled_reason_weather'|trans }}
                        {% elseif ride.disabledReason == 'CANCELLED_PARTICIPANTS'|enum_constant('RideDisabledReasonType') %}
                            {{ 'ride.tabs.details.disabled_reason_participants'|trans }}
                        {% elseif ride.disabledReason == 'CANCELLED_AUTHORITIES'|enum_constant('RideDisabledReasonType') %}
                            {{ 'ride.tabs.details.disabled_reason_authorities'|trans }}
                        {% elseif ride.disabledReason == 'CANCELLED'|enum_constant('RideDisabledReasonType') %}
                            {{ 'ride.tabs.details.disabled_reason_cancelled'|trans }}
                        {% endif %}
                    </p>
                    {% if ride.disabledReasonMessage %}
                        <hr>
                        <div class="mb-0">{{ ride.disabledReasonMessage|markdown }}</div>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endif %}

    {# Social Media Links #}
    {% include 'Ride/Includes/_socialMedia.html.twig' with { 'ride': ride } %}
</div>

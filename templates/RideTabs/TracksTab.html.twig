<div class="tab-pane fade" id="tracks" role="tabpanel" aria-labelledby="tracks-tab">
    <div class="row">
        <div class="col-md-12">
            <div class="btn-group float-end margin-top-medium">
                {% if app.user %}
                    <button type="button"
                            class="btn btn-success dropdown-toggle"
                            data-bs-toggle="dropdown"
                            aria-expanded="false">
                        <i class="far fa-map"></i>
                        Track hinzuf√ºgen
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        {% if feature('strava_track_upload') %}
                            <li>
                                <a class="dropdown-item"
                                   href="{{ object_path(ride, 'caldera_criticalmass_strava_auth') }}">
                                    <i class="fab fa-strava"></i>
                                    Track von Strava importieren
                                </a>
                            </li>
                        {% endif %}
                        <li>
                            <a class="dropdown-item"
                               href="{{ object_path(ride, 'caldera_criticalmass_track_upload') }}"
                               title="Track hochladen">
                                <i class="far fa-upload"></i>
                                GPX-Datei hochladen
                            </a>
                        </li>
                        {#<li>
                              <a href="{{ path('caldera_criticalmass_track_draw', { 'citySlug': ride.city.getMainSlugString(), 'rideDate': ride.getFormattedDate() }) }}"
                                 title="Track manuell zeichnen">
                                  <i class="far fa-map"></i>
                                  Track manuell zeichnen
                              </a>
                          </li>#}
                    </ul>
                {% else %}
                    <span class="btn btn-success modal-hint"
                          data-modal-hint-title="{{ 'hint_modal.ride.track_upload_button.title'|trans }}"
                          data-modal-hint-text="{{ 'hint_modal.ride.track_upload_button.text'|trans({'%city%': ride.city.city, '%dateTime%': ride.dateTime|date('d.m.Y')}) }}"
                          data-hint-modal-size="md">
                        <i class="far fa-map"></i>
                        Track hinzuf√ºgen
                    </span>
                {% endif %}
            </div>

            <h3>GPX-Tracks</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-md-9">
            {% if tracks|length > 0 %}
                <table class="table">
                    <tr>
                        <th>
                            <input type="checkbox" class="allgroups-visibility-toggle" checked="checked"/>
                        </th>
                        <th>Teilnehmer</th>
                        <th>Dauer</th>
                        <th>L√§nge</th>
                        <th>Durchschnittsgeschwindigkeit</th>
                    </tr>
                    {% set trackNumber = 0 %}

                    {% for track in tracks %}
                        <tr>
                            <td style="background-color: rgb({{ track.getColorRed() }}, {{ track.getColorGreen() }}, {{ track.getColorBlue() }});">
                                <input type="checkbox"
                                       class="track-visibility-toggle"
                                       data-track-id="{{ track.id }}"
                                       checked="checked"/>
                            </td>
                            <td>
                                {{ track.user.username }}
                            </td>
                            <td>
                                {% if track.getDurationInterval() %}
                                    {{ human_duration(track.getDurationInSeconds()) }}
                                {% endif %}
                            </td>
                            <td>
                                {% if track.distance %}
                                    {{ track.distance|round(2) }}&nbsp;km
                                {% endif %}
                            </td>
                            <td>
                                {% set track_average_velocity = average_velocity(track) %}
                                {% if track_average_velocity %}
                                    {{ track_average_velocity|round(2) }}&nbsp;km/h
                                {% endif %}
                            </td>
                        </tr>
                        {% set trackNumber = trackNumber + 1 %}
                    {% endfor %}
                </table>
            {% else %}
                {% if app.getUser() %}
                    <div class="alert alert-info" role="alert">
                        <strong>Schade!</strong> Bislang hat noch niemand eine
                        GPX-Datei hochgeladen &mdash;
                        <a href="#"
                           data-bs-toggle="modal"
                           data-bs-target="#modalTrackUpload"
                           title="Track hochladen">
                            Du kannst noch immer der Erste sein
                        </a>.
                    </div>
                {% else %}
                    <div class="alert alert-info" role="alert">
                        <strong>Schade!</strong> Bislang hat noch niemand eine
                        GPX-Datei hochgeladen. Als
                        <a href="{{ path('login') }}">
                            angemeldeter Nutzer
                        </a>
                        k√∂nntest du hier der Erste sein.
                    </div>
                {% endif %}
            {% endif %}
        </div>

        <div class="col-md-3">
            <div class="card mb-3 shadow-sm">
                <div class="card-header bg-body-tertiary py-2">
                    <h6 class="mb-0 fw-semibold">
                        üéûÔ∏è Timelapse
                    </h6>
                </div>

                <div class="card-body">
                    <div id="timelapse-control" style="display: none;">
                        <div class="row">
                            <div class="col-md-6">
                                <dl class="mb-2">
                                    <dt>Uhrzeit</dt>
                                    <dd class="mb-0">
                                        <span id="timelapse-time-clock">{{ ride.dateTime.format('H:i') }}</span> Uhr
                                    </dd>
                                </dl>
                            </div>

                            <div class="col-md-6">
                                <dl class="mb-2">
                                    <dt>Verstrichene Zeit</dt>
                                    <dd class="mb-0">
                                        <span id="timelapse-time-elapsed">0</span> Minuten
                                    </dd>
                                </dl>
                            </div>
                        </div>

                        <div class="d-flex justify-content-center my-3">
                            <div class="btn-group" id="control-buttons" role="group" aria-label="Timelapse controls">
                                <button type="button" id="step-backward-button" class="btn btn-outline-secondary">
                                    <i class="far fa-backward"></i>
                                </button>
                                <button type="button" id="pause-button" class="btn btn-outline-secondary">
                                    <i class="far fa-pause"></i>
                                </button>
                                <button type="button" id="stop-button" class="btn btn-outline-secondary">
                                    <i class="far fa-stop"></i>
                                </button>
                                <button type="button" id="play-button" class="btn btn-outline-secondary">
                                    <i class="far fa-play"></i>
                                </button>
                                <button type="button" id="step-forward-button" class="btn btn-outline-secondary">
                                    <i class="far fa-forward"></i>
                                </button>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-label mb-1">
                                Geschwindigkeit
                            </div>
                            <input id="speed-slider-input" type="text" class="w-100"/>
                        </div>

                        <div class="mb-0">
                            <div class="form-label mb-1">
                                Zeitpunkt
                            </div>
                            <input id="time-slider-input" type="text" class="w-100"/>
                        </div>
                    </div>

                    <div id="timelapse-start">
                        <div class="text-center">
                            {% if tracks|length %}
                                <button id="timelapse-start-button" class="btn btn-success">
                                    <i class="far fa-bicycle"></i>
                                    Timelapse starten
                                </button>
                            {% else %}
                                <p class="mb-0 text-muted">
                                    Die Timelapse-Funktion funktioniert nur, wenn vorher mindestens ein GPX-Track hinzugef√ºgt wurde.
                                </p>
                            {% endif %}
                        </div>
                    </div>

                    <div id="timelapse-loader" style="display: none;">
                        <p class="text-center mb-0 text-muted">
                            Lade Track <span id="timelapse-track-number">0</span> von
                            <span id="timelapse-track-total">0</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

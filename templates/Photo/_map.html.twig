{% if photo.hasCoordinates() %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">
                Karte
            </h3>
        </div>
        <div class="panel-body">
            <div id="map-{{ photo.id }}"
                 class="map"
                 data-controller="map--map"
                 style="height: 150px;"
                 data-map---map-center-latitude="{{ photo.latitude }}"
                 data-map---map-center-longitude="{{ photo.longitude }}"
                 data-map---map-zoomlevel="13"
                 data-map---lock-map="true"
                 data-map---map-marker-latitude="{{ photo.latitude }}"
                 data-map---map-marker-longitude="{{ photo.longitude }}"
                 data-map---map-marker-type="photo"
                {% if track %}
                    data-map---polyline="{{ track.polyline }}"
                    data-map---polyline-color="rgb({{ track.colorRed }}, {{ track.colorGreen }}, {{ track.colorBlue }})"
                {% endif %}
            ></div>
        </div>
    </div>
{% endif %}

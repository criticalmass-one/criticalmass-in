{% if photo.hasCoordinates() %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">
                Karte
            </h3>
        </div>
        <div class="panel-body">
            <div id="map-{{ photo.id }}"
                 class="map"
                 data-controller="map--map"
                 style="height: 150px;"
                 data-map--map-center-latitude-value="{{ photo.latitude }}"
                 data-map--map-center-longitude-value="{{ photo.longitude }}"
                 data-map--map-zoom-value="13"
                 data-map--lock-map-value="true"
                 data-map--map-marker-latitude-value="{{ photo.latitude }}"
                 data-map--map-marker-longitude-value="{{ photo.longitude }}"
                 data-map--map-marker-type-value="photo"
                {% if track %}
                    data-map--polyline-value="{{ track.polyline }}"
                    data-map--polyline-color-value="rgb({{ track.colorRed }}, {{ track.colorGreen }}, {{ track.colorBlue }})"
                {% endif %}
            ></div>
        </div>
    </div>
{% endif %}

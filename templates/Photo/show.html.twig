{% extends 'Template/StandardTemplate.html.twig' %}

{% import 'Bootstrap/bootstrap_macros.html.twig' as bootstrap %}

{% set previous_photo = previous_entity(photo) %}
{% set next_photo = next_entity(photo) %}

{% block breadcrumb %}
    {{ bootstrap.breadcrumb_item('Städteliste', path('caldera_criticalmass_city_list')) }}
    {{ bootstrap.breadcrumb_item(city.city, objectPath(city)) }}
    {{ bootstrap.breadcrumb_item(ride.title, objectPath(ride)) }}
    {{ bootstrap.breadcrumb_item('Fotos', objectPath(ride, 'caldera_criticalmass_photo_ride_list')) }}
    {{ bootstrap.breadcrumb_item('Foto ' ~ photo.id ~ ' aus ' ~ city.city, '', true) }}
{% endblock %}

{% block navigation %}
    <div class="row mt-2">
        <div class="col-12">
            <nav aria-label="Photo navigation" class="text-center">
                <ul class="pagination justify-content-center">
                    {% if previous_photo %}
                        <li class="page-item">
                            <a class="page-link" href="{{ object_path(previous_photo) }}">
                                &larr; Voriges Foto
                            </a>
                        </li>
                    {% else %}
                        <li class="page-item disabled">
                            <a class="page-link" href="#">
                                &larr; Voriges Foto
                            </a>
                        </li>
                    {% endif %}

                    {% if next_photo %}
                        <li class="page-item">
                            <a class="page-link" href="{{ object_path(next_photo) }}">
                                Nächstes Photo &rarr;
                            </a>
                        </li>
                    {% else %}
                        <li class="page-item disabled">
                            <a class="page-link" href="#">
                                Nächstes Photo &rarr;
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        </div>
    </div>
{% endblock %}

{% block content %}
<div class="container">
    {{ block('navigation') }}

    <div class="row">
        <div class="col-12">
            {% if not app.user and photo.user.blurGalleries %}
                <div class="row" style="position: absolute; z-index: 100; width: 100%; height: 100%; top: 100px;">
                    <div class="col-12 col-md-6 col-md-offset-3">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="text-center">
                                    Bitte logge dich ein
                                </h4>

                                <p>
                                    Um diese Fotos anzusehen, musst du dich leider einloggen. Keine Sorge, das dauert
                                    keine fünf Sekunden:
                                </p>

                                <p class="text-center">
                                    <a href="#" data-toggle="modal" data-target="#loginModal" class="btn btn-primary">
                                        Login
                                    </a>
                                </p>

                                <h6 class="text-center">
                                    Warum wird mir das angezeigt?
                                </h6>

                                <p>
                                    <small>
                                        criticalmass.in ist ein reines Hobby-Projekt ohne jegliche Absichten zur
                                        Gewinnerzielung. Der Ansturm auf Fotos bringt Server und Anbindung leider
                                        regelmäßig an die Belastungsgrenze &mdash; Indem bestimmte Fotos nur für
                                        angemeldete Nutzer angezeigt werden, lässt sich die Belastung (hoffentlich)
                                        besser verteilen.
                                    </small>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <img id="photo" class="img-fluid" src="{{ vich_uploader_asset(photo, 'imageFile')|imagine_filter('gallery_photo_blurred') }}" style="width: 100%;" />
            {% else %}
                <img id="photo" class="img-fluid" src="{{ vich_uploader_asset(photo, 'imageFile')|imagine_filter('gallery_photo_standard') }}" />
            {% endif %}
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12 col-md-8">
            {% include 'Photo/_comments.html.twig' with { 'photo': photo } %}
        </div>

        <div class="col-12 col-md-4">
            {% if photo.hasCoordinates() %}
            <div class="row mb-2">
                <div class="col-12">
                    {% include 'Photo/_map.html.twig' with { 'photo': photo } %}
                </div>
            </div>
            {% endif %}

            <div class="row mb-2">
                <div class="col-12">
                    {% include 'Photo/_details.html.twig' with { 'photo': photo } %}
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    {% include 'Photo/_social_networks.html.twig' with { 'photo': photo } %}
                </div>
            </div>
        </div>
    </div>

        {{ block('navigation') }}
</div>

{% endblock %}

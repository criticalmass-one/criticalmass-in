{% extends 'Template/StandardTemplate.html.twig' %}

{% set previous_photo = previous_entity(photo) %}
{% set next_photo = next_entity(photo) %}

{% import '_macros/breadcrumb.html.twig' as bc %}

{% block breadcrumbs %}
    {{ bc.render(
        [
            { label: 'St√§dteliste', url: path('caldera_criticalmass_city_list') },
            { label: city.city, url: object_path(city) },
            { label: ride.title, url: object_path(ride) },
            { label: 'Fotos', url: object_path(ride, 'caldera_criticalmass_photo_ride_list') },
            { label: 'Foto {{ photo.id }} aus {{ city.city }}' },
        ],
        {
            homeLabel: 'Critical Mass',
            homeUrl: path('caldera_criticalmass_frontpage')
        }
    ) }}
{% endblock %}

{% block navigation %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between my-3">
                {% if previous_photo %}
                    <a class="btn btn-outline-secondary"
                       href="{{ object_path(previous_photo) }}">
                        &larr; Voriges Foto
                    </a>
                {% else %}
                    <button class="btn btn-outline-secondary" disabled>
                        &larr; Voriges Foto
                    </button>
                {% endif %}

                {% if next_photo %}
                    <a class="btn btn-outline-secondary"
                       href="{{ object_path(next_photo) }}">
                        N√§chstes Foto &rarr;
                    </a>
                {% else %}
                    <button class="btn btn-outline-secondary" disabled>
                        N√§chstes Foto &rarr;
                    </button>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="container">
        {{ block('navigation') }}

        <div class="row">
            <div class="col-12">
                {% if not app.user and photo.user.blurGalleries %}
                    <div class="row" style="position: absolute; z-index: 100; width: 100%; height: 100%; top: 100px;">
                        <div class="col-12 col-md-6 offset-md-3">
                            <div class="card mb-3 shadow-sm border-warning">
                                <div class="card-body">
                                    <h5 class="text-center fw-semibold mb-3">
                                        üîí Bitte logge dich ein
                                    </h5>

                                    <p class="text-muted">
                                        Um diese Fotos anzusehen, musst du dich leider einloggen.
                                        Keine Sorge ‚Äì das dauert keine f√ºnf Sekunden.
                                    </p>

                                    <div class="d-grid mb-3">
                                        <a href="#"
                                           data-bs-toggle="modal"
                                           data-bs-target="#loginModal"
                                           class="btn btn-primary">
                                            Login
                                        </a>
                                    </div>

                                    <hr>

                                    <h6 class="fw-semibold">
                                        Warum wird mir das angezeigt?
                                    </h6>

                                    <p class="small text-muted mb-0">
                                        criticalmass.in ist ein reines Hobby-Projekt ohne kommerzielle Absichten.
                                        Der gro√üe Andrang auf Fotos bringt Server und Anbindung regelm√§√üig an ihre
                                        Grenzen. Indem bestimmte Inhalte nur f√ºr angemeldete Nutzer angezeigt
                                        werden, l√§sst sich die Belastung hoffentlich besser verteilen.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <img id="photo" class="img-fluid"
                         src="{{ vich_uploader_asset(photo, 'imageFile')|imagine_filter('gallery_photo_blurred') }}"
                         style="width: 100%;"/>
                {% else %}
                    <img id="photo" class="img-fluid"
                         src="{{ vich_uploader_asset(photo, 'imageFile')|imagine_filter('gallery_photo_standard') }}"/>
                {% endif %}
            </div>
        </div>

        <div class="row margin-top-medium">
            <div class="col-12 col-md-8">
                {% include 'Photo/_comments.html.twig' with { 'photo': photo } %}
            </div>

            <div class="col-12 col-md-4">
                {% include 'Photo/_map.html.twig' with { 'photo': photo } %}
                {% include 'Photo/_details.html.twig' with { 'photo': photo } %}
            </div>
        </div>

        {{ block('navigation') }}
    </div>
{% endblock %}

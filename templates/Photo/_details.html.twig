<div class="card border-0 shadow-sm mt-3">
    <div class="card-header bg-white border-bottom">
        <h3 class="card-title h6 mb-0">
            <i class="far fa-info-circle text-muted me-2"></i>Detaildaten
        </h3>
    </div>
    <div class="card-body">
        <dl class="mb-0">
            <dt>
                <i class="far fa-user me-1"></i> Fotograf√Øn
            </dt>
            <dd>
                {{ photo.user.username }}
            </dd>

            {% if photo.exifCreationDate %}
            <dt>
                <i class="far fa-calendar-alt me-1"></i> Aufnahmedatum
            </dt>
            <dd>
                {{ photo.exifCreationDate|date('d.m.y H:i:s', photo.ride.city.timezone) }} Uhr
            </dd>
            {% endif %}

            {% if photo.location %}
                <dt>
                    <i class="far fa-map-marker-alt me-1"></i> Aufnahmeort
                </dt>
                <dd>
                    {{ photo.location }}
                </dd>
            {% endif %}

            {% if photo.hasCoordinates() %}
                <dt>
                    <i class="far fa-map-pin me-1"></i> Koordinaten
                </dt>
                <dd>
                    <a href="https://www.openstreetmap.org/#map=15/{{ photo.latitude }}/{{ photo.longitude }}" target="_blank" rel="noopener">
                        {{ photo.latitude }}, {{ photo.longitude }}
                    </a>
                </dd>
            {% endif %}

            {% if photo.exifExposure %}
                <dt>
                    <i class="far fa-clock me-1"></i> Verschlusszeit
                </dt>
                <dd>
                    {{ photo.exifExposure }}"
                </dd>
            {% endif %}

            {% if photo.exifAperture %}
                <dt>
                    Blende
                </dt>
                <dd>
                    {{ photo.exifAperture }}
                </dd>
            {% endif %}

            {% if photo.exifIso %}
                <dt>
                    ISO
                </dt>
                <dd>
                    {{ photo.exifIso }}
                </dd>
            {% endif %}

            {% if photo.exifFocalLength %}
                <dt>
                    Brennweite
                </dt>
                <dd>
                    {{ photo.exifFocalLength }} mm
                </dd>
            {% endif %}

            {% if photo.exifCamera %}
                <dt>
                    <i class="far fa-camera me-1"></i> Kamera
                </dt>
                <dd>
                    {{ photo.exifCamera }}
                </dd>
            {% endif %}
        </dl>

        {% if is_granted('ROLE_PHOTO_DOWNLOAD') %}
            <a href="{{ path('caldera_criticalmass_photo_download', { id: photo.id }) }}" class="btn btn-primary btn-sm">
                <i class="far fa-download me-1"></i> Foto herunterladen
            </a>
        {% endif %}
    </div>
</div>

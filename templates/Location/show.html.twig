{% extends 'Template/StandardTemplate.html.twig' %}

{% block title %}√úbersicht zum Treffpunkt {{ location.title }} der {{ location.city.title }}{% endblock %}

{% import '_macros/breadcrumb.html.twig' as bc %}

{% block breadcrumbs %}
    {{ bc.render(
        [
            { label: 'St√§dteliste', url: path('caldera_criticalmass_city_list') },
            { label: location.city.city, url: object_path(location.city) },
            { label: ride.title, url: object_path(ride) },
            { label: 'Informationen zum Treffpunkt' },
            { label: 'Treffpunkte' },
            { label: location.title },
        ],
        {
            homeLabel: 'Critical Mass',
            homeUrl: path('caldera_criticalmass_frontpage')
        }
    ) }}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-8">
                <h1>
                    {{ location.title }}
                </h1>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-md-8">
                {% if location.hasCoordinates() %}
                    <div class="row">
                        <div class="col-12">
                            <div
                                    id="map"
                                    class="map"
                                    style="height: 150px;"
                                    data-controller="map--map"
                                    data-map--map-center-latitude-value="{{ location.latitude }}"
                                    data-map--map-center-longitude-value="{{ location.longitude }}"
                                    data-map--map-zoom-value="13"
                                    data-map--map-lock-map-value="true"
                                    data-map--map-marker-latitude-value="{{ location.latitude }}"
                                    data-map--map-marker-longitude-value="{{ location.longitude }}"
                                    data-map--map-marker-type-value="location"
                            ></div>
                        </div>
                    </div>
                {% endif %}

                <div class="row mt-3">
                    <div class="col-12">
                        {{ location.description|markdown }}
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-4 mt-4 mt-md-0">
                {% if rides|length > 0 %}
                    <div class="card mb-3 shadow-sm">
                        <div class="card-header bg-body-tertiary py-2">
                            <h6 class="mb-0 fw-semibold">
                                üìç Touren von diesem Treffpunkt
                            </h6>
                        </div>

                        <div class="card-body">
                            <ul class="list-unstyled mb-0">
                                {% for ride in rides %}
                                    <li class="mb-1">
                                        <a href="{{ object_path(ride) }}">
                                            {{ ride.dateTime|date('d.m.Y', ride.city.timezone) }}
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                {% endif %}

                <div class="card mb-3 shadow-sm">
                    <div class="card-header bg-body-tertiary py-2">
                        <h6 class="mb-0 fw-semibold">
                            üìç Andere Treffpunkte dieser Stadt
                        </h6>
                    </div>

                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            {% for location in locations %}
                                <li class="mb-1">
                                    <a href="{{ object_path(location) }}">
                                        {{ location.title }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

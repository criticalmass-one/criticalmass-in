{% extends 'Template/StandardTemplate.html.twig' %}

{% block title %}Übersicht zum Treffpunkt {{ location.title }} der {{ location.city.title }}{% endblock %}

{% block breadcrumb %}
    <li>
        <a href="{{ path('caldera_criticalmass_city_list') }}">
            Städteliste
        </a>
    </li>

    <li>
        <a href="{{ object_path(location.city) }}">
            {{ location.city.city }}
        </a>
    </li>
    {% if ride %}
        <li>
            <a href="{{ object_path(ride) }}">
                {{ ride.title }}
            </a>
        </li>

        <li class="active">
            Informationen zum Treffpunkt
        </li>
    {% else %}
        <li>
            Treffpunkte
        </li>

        <li class="active">
            {{ location.title }}
        </li>
    {% endif %}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-8">
                <h1>
                    {{ location.title }}
                </h1>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-md-8">
                {% if location.hasCoordinates() %}
                    <div class="row">
                        <div class="col-12">
                            <div
                                    id="map"
                                    class="map"
                                    style="height: 150px;"
                                    data-controller="map--map"
                                    data-map--map-center-latitude-value="{{ location.latitude }}"
                                    data-map--map-center-longitude-value="{{ location.longitude }}"
                                    data-map--map-zoom-value="13"
                                    data-map--map-lock-map-value="true"
                                    data-map--map-marker-latitude-value="{{ location.latitude }}"
                                    data-map--map-marker-longitude-value="{{ location.longitude }}"
                                    data-map--map-marker-type-value="location"
                            ></div>
                        </div>
                    </div>
                {% endif %}

                <div class="row mt-3">
                    <div class="col-12">
                        {{ location.description|markdown }}
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-4 mt-4 mt-md-0">
                {% if rides|length > 0 %}
                    <div class="card mb-3">
                        <div class="card-header">
                            <h3 class="card-title mb-0">
                                Touren von diesem Treffpunkt
                            </h3>
                        </div>
                        <div class="card-body">
                            <ul class="mb-0">
                                {% for ride in rides %}
                                    <li>
                                        <a href="{{ object_path(ride) }}">
                                            {{ ride.dateTime|date('d.m.Y', ride.city.timezone) }}
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                {% endif %}

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title mb-0">
                            Andere Treffpunkte dieser Stadt
                        </h3>
                    </div>
                    <div class="card-body">
                        <ul class="mb-0">
                            {% for location in locations %}
                                <li>
                                    <a href="{{ object_path(location) }}">
                                        {{ location.title }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

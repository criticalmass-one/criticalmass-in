{% extends 'Template/StandardTemplate.html.twig' %}

{% form_theme userEmailForm 'Form/theme.html.twig' %}

{% block title %}Dein Benutzerprofil{% endblock %}

{% block breadcrumb %}
    <li>
        <a href="{{ path('criticalmass_user_usermanagement') }}">
            Dein Benutzerkonto
        </a>
    </li>

    <li class="active">
        E-Mail-Adresse ändern
    </li>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h2>
                    E-Mail-Adresse ändern
                </h2>

                <p class="lead">
                    Hier kannst du deine E-Mail-Adresse ändern &mdash; denk daran, dich beim nächsten Mal mit deiner
                    neuen E-Mail-Adresse einzuloggen.
                </p>
            </div>
        </div>

        {% if app.user.oauthAccount and not is_granted('ROLE_ADMIN') %}
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="alert alert-info" role="alert">
                        Du kannst dein Kennwort nicht ändern, weil du dich über ein soziales Netzwerk bei
                        criticalmass.in anmeldest.
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-md-offset-3 text-center">
                    <a class="btn btn-default" href="{{ path('criticalmass_user_usermanagement') }}">
                        Zurück
                    </a>
                </div>
            </div>
        {% else %}

            {{ form_start(userEmailForm) }}

            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Deine E-Mail-Adresse
                        </div>
                        <div class="panel-body form-group form-group{% if form_errors(userEmailForm.email) %} has-error has-feedback{% endif %}">
                            <p>
                                Deine E-Mail-Adresse wird selbstverständlich nirgendwo öffentlich angezeigt.
                            </p>

                            {{ form_errors(userEmailForm.email) }}

                            <label class="control-label" for="">
                                E-Mail-Adresse:
                            </label>
                            {{ form_widget(userEmailForm.email, { 'attr' : { 'class': 'form-control'} }) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-md-offset-3 text-center">
                    <div class="btn-group" role="group">
                        <a href="{{ path('criticalmass_user_usermanagement') }}" class="btn btn-default">
                            Abbrechen
                        </a>

                        <button type="submit" class="btn btn-primary">
                            Speichern
                        </button>
                    </div>
                </div>
            </div>

            {{ form_end(userEmailForm) }}
        {% endif %}
    </div>
{% endblock %}

{% extends 'Template/StandardTemplate.html.twig' %}
{% import 'Template/Macros/breadcrumb.html.twig' as breadcrumb %}

{% form_theme usernameForm 'Form/theme.html.twig' %}

{% block title %}{{ 'profile.username.title'|trans }}{% endblock %}

{% block breadcrumb %}
    {{ breadcrumb.item('profile.manage.breadcrumb'|trans, path('criticalmass_user_usermanagement')) }}
    {{ breadcrumb.active('profile.username.breadcrumb'|trans) }}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h2>
                    {{ 'profile.username.heading'|trans }}
                </h2>

                <p class="lead">
                    {{ 'profile.username.lead'|trans }}
                </p>
            </div>
        </div>

        {{ form_start(usernameForm) }}

        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        {{ 'profile.username.panel_title'|trans }}
                    </div>
                    <div class="panel-body form-group form-group{% if form_errors(usernameForm.username) %} has-error has-feedback{% endif %}">
                        <p>
                            {{ 'profile.username.explanation'|trans }}
                        </p>

                        {{ form_errors(usernameForm.username) }}

                        <label class="control-label" for="">
                            {{ 'profile.username.label'|trans }}
                        </label>
                        {{ form_widget(usernameForm.username, { 'attr' : { 'class': 'form-control'} }) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="btn-group" role="group">
                    <a href="{{ path('criticalmass_user_usermanagement') }}" class="btn btn-secondary">
                        {{ 'common.cancel'|trans }}
                    </a>

                    <button type="submit" class="btn btn-primary">
                        {{ 'common.save'|trans }}
                    </button>
                </div>
            </div>
        </div>

        {{ form_end(usernameForm) }}
    </div>
{% endblock %}

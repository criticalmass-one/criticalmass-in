{% extends 'Template/StandardTemplate.html.twig' %}

{% block title %}Dein Benutzerprofil{% endblock %}

{% import '_macros/breadcrumb.html.twig' as bc %}

{% block breadcrumbs %}
    {{ bc.render(
        [
            { label: 'Dein Benutzerkonto' },
        ],
        {
            homeLabel: 'Critical Mass',
            homeUrl: path('caldera_criticalmass_frontpage')
        }
    ) }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="row g-3">

                <div class="col-md-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-body-tertiary py-2">
                            <span class="fw-semibold">üë§ Profilfoto</span>
                        </div>
                        <div class="card-body text-muted">

                        <div class="card-header bg-body-tertiary py-2">
                            <span class="fw-semibold">üìç Deine Tracks</span>
                        </div>
                        <div class="card-body">
                            {% if trackCounter == 0 %}
                                <div class="alert alert-info mb-0">
                                    Noch keine Tracks gespeichert.
                                </div>
                            {% else %}
                                <p class="mb-1">
                                    <strong>{{ trackCounter }}</strong> hochgeladene Tracks.
                                </p>
                                <p class="text-muted mb-0">
                                    Verwalte und erg√§nze deine Touren.
                                </p>
                            {% endif %}
                        </div>
                        {% if trackCounter != 0 %}
                            <div class="card-footer bg-transparent border-0 pt-0">
                                <a class="btn btn-outline-secondary w-100"
                                   href="{{ path('caldera_criticalmass_track_list') }}">
                                    Tracks verwalten
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>

                {% if feature('photos') %}
                    <div class="col-md-6">
                        <div class="card h-100 shadow-sm">
                            <div class="card-header bg-body-tertiary py-2">
                                <span class="fw-semibold">üì∏ Deine Fotos</span>
                            </div>
                            <div class="card-body">
                                {% if photoCounter == 0 %}
                                    <div class="alert alert-info mb-0">
                                        Noch keine Fotos hochgeladen.
                                    </div>
                                {% else %}
                                    <p class="mb-1">
                                        <strong>{{ photoCounter }}</strong> Fotos gespeichert.
                                    </p>
                                    <p class="text-muted mb-0">
                                        Deine Bilder von vergangenen Touren.
                                    </p>
                                {% endif %}
                            </div>
                            {% if photoCounter != 0 %}
                                <div class="card-footer bg-transparent border-0 pt-0">
                                    <a class="btn btn-outline-secondary w-100"
                                       href="{{ path('caldera_criticalmass_photo_user_list') }}">
                                        Fotos verwalten

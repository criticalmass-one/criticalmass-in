{% if app.user %}
    <div class="modal fade" id="modal-add-post" tabindex="-1" aria-labelledby="label-add-post" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title" id="label-add-post">Kommentar hinzufügen</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Schließen"></button>
                </div>

                {{ form_start(form, {'attr': {'id': 'form-post', 'role': 'form'}}) }}
                <div class="modal-body">
                    <div class="mb-3{% if form_errors(form.message) %} has-error has-feedback{% endif %}">
                        <label class="form-label">Dein Kommentar:</label>
                        {{ form_widget(form.message, {'attr': {'class': 'form-control', 'rows': 10}}) }}

                        {# Optional: BS5-konforme Fehlermeldung #}
                        {% if form_errors(form.message) %}
                            <div class="invalid-feedback d-block">
                                {{ form_errors(form.message) }}
                            </div>
                        {% endif %}
                    </div>

                    {{ form_widget(form._token) }}
                </div>

                <div class="modal-footer">
                    <div class="btn-group" role="group" aria-label="Kommentar-Aktionen">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            Abbrechen
                        </button>
                        <button type="submit" id="button-submit-post" class="btn btn-success">
                            <i class="far fa-pencil"></i>
                            Speichern
                        </button>
                    </div>
                </div>
                {{ form_end(form) }}

            </div>
        </div>
    </div>
{% endif %}

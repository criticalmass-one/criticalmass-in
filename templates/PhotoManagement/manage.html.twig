{% extends 'Template/StandardTemplate.html.twig' %}
{% import 'Template/Macros/breadcrumb.html.twig' as breadcrumb %}

{% block title %}Fotos bearbeiten{% endblock %}

{% block breadcrumb %}
    {{ breadcrumb.item(ride.city.title, object_path(ride.city)) }}
    {{ breadcrumb.item(ride.title, object_path(ride)) }}
    {{ breadcrumb.active('Fotos bearbeiten') }}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row mb-3">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">
                        Fotos bearbeiten
                    </h2>

                    <div>
                        <a href="{{ object_path(ride, 'caldera_criticalmass_gallery_photos_upload_ride') }}"
                           class="btn btn-success btn-sm">
                            <i class="far fa-camera me-1"></i>
                            Weitere Fotos hochladen
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-3">
            {% for photo in pagination %}
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm">
                        <img class="card-img-top img-fluid{% if not photo.enabled %} opacity-50{% endif %}"
                             src="{{ vich_uploader_asset(photo, 'imageFile')|imagine_filter('gallery_photo_thumb') }}"/>

                        <div class="card-body py-2">
                            <div class="btn-group w-100">
                                <button type="button" class="btn btn-secondary btn-sm dropdown-toggle"
                                        data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="far fa-edit me-1"></i> Bearbeiten
                                </button>
                                <ul class="dropdown-menu">
                                    <li class="dropdown-item-text text-muted">
                                        <small>
                                            <i class="far fa-calendar-alt me-1"></i>
                                            {{ photo.exifCreationDate.format('d.m.Y H:i:s') }}
                                        </small>
                                    </li>

                                    <li><hr class="dropdown-divider"></li>

                                    <li>
                                        <a class="dropdown-item" href="{{ object_path(photo, 'caldera_criticalmass_photo_delete') }}">
                                            <i class="far fa-trash-alt me-1"></i>
                                            Löschen
                                        </a>
                                    </li>

                                    {% if photo.enabled %}
                                        <li>
                                            <a class="dropdown-item" href="{{ object_path(photo, 'caldera_criticalmass_photo_toggle') }}">
                                                <i class="far fa-eye-slash me-1"></i>
                                                Deaktivieren
                                            </a>
                                        </li>
                                    {% else %}
                                        <li>
                                            <a class="dropdown-item" href="{{ object_path(photo, 'caldera_criticalmass_photo_toggle') }}">
                                                <i class="far fa-eye me-1"></i>
                                                Aktivieren
                                            </a>
                                        </li>
                                    {% endif %}

                                    <li><hr class="dropdown-divider"></li>

                                    <li>
                                        <a class="dropdown-item" href="{{ object_path(photo, 'caldera_criticalmass_photo_rotate') }}?direction=left">
                                            <i class="far fa-undo me-1"></i>
                                            links rotieren
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="{{ object_path(photo, 'caldera_criticalmass_photo_rotate') }}?direction=right">
                                            <i class="far fa-redo me-1"></i>
                                            rechts rotieren
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider"></li>

                                    {% if photo.ride.featuredPhoto == photo %}
                                        <li>
                                            <a class="dropdown-item" href="{{ object_path(photo, 'caldera_criticalmass_photo_featured') }}">
                                                <i class="far fa-flag me-1"></i>
                                                Hauptbild lösen
                                            </a>
                                        </li>
                                    {% else %}
                                        <li>
                                            <a class="dropdown-item" href="{{ object_path(photo, 'caldera_criticalmass_photo_featured') }}">
                                                <i class="far fa-flag me-1"></i>
                                                Hauptbild festlegen
                                            </a>
                                        </li>
                                    {% endif %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <div class="text-center">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

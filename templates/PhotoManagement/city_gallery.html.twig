{% extends 'Template/StandardTemplate.html.twig' %}
{% import 'Template/Macros/breadcrumb.html.twig' as breadcrumb %}

{% block title %}{{ 'gallery.city_gallery_title'|trans }}{% endblock %}

{% block breadcrumb %}
    {{ breadcrumb.item('photo.show.breadcrumb_city_list'|trans, path('caldera_criticalmass_city_list')) }}
    {{ breadcrumb.active('gallery.city_gallery_breadcrumb'|trans) }}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>
                    {{ 'gallery.city_gallery_heading'|trans }}
                </h1>
            </div>
        </div>

        {% set cityString = '' %}
        {% for city in cities %}
            {% set cityString = cityString ~ '<a href="' ~ object_path(city) ~ '">' ~ city.city|e ~ '</a>' %}

            {% if loop.revindex0 > 1 %}
                {% set cityString = cityString ~ ', ' %}
            {% endif %}

            {% if loop.revindex0 == 1 %}
                {% set cityString = cityString ~ 'gallery.conjunction'|trans %}
            {% endif %}
        {% endfor %}
        <div class="row">
            <div class="col-md-12">
                <p class="lead">
                    {{ 'gallery.city_gallery_lead'|trans({'%cities%': cityString})|raw }}
                </p>
            </div>
        </div>

        <div class="row">
            <div class="photo-list">
                {% for photo in photos %}
                    <div class="col-xs-6 col-sm-4 col-md-3 col-lg-3">
                        <div class="photo-thumb margin-bottom-medium text-center">
                            <a href="{{ object_path(photo) }}">
                                <img src="{{ vich_uploader_asset(photo, 'imageFile')|imagine_filter('gallery_photo_thumb') }}"/>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

{% extends 'Template/StandardTemplate.html.twig' %}

{% block title %}Foto zensieren{% endblock %}

{% import 'Bootstrap/bootstrap_macros.html.twig' as bootstrap %}

{% block breadcrumb %}
    {{ bootstrap.breadcrumb_item('Städteliste', path('caldera_criticalmass_city_list')) }}
    {{ bootstrap.breadcrumb_item(ride.city.title, objectPath(ride.city)) }}
    {{ bootstrap.breadcrumb_item(photo.ride.title, objectPath(photo.ride)) }}
    {{ bootstrap.breadcrumb_item('Foto zensieren', '', true) }}
{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>
                Foto zensieren
            </h2>

            <p class="lead">
                Markiere mit der Maus auf dem Foto jene Bereiche, die du unkenntlich machen möchtest.
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <img id="photo" class="img-fluid" src="{{ vich_uploader_asset(photo, 'imageFile')|imagine_filter('gallery_photo_standard') }}"/>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-md-12">
            <div class="btn-group pull-right" role="group">
                <a href="javascript:window.location=document.referrer;" class="btn btn-secondary">
                    Abbrechen
                </a>
                <button id="save" class="btn btn-primary">
                    Speichern
                </button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

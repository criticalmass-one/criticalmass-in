{% extends 'Template/StandardTemplate.html.twig' %}

{% block title %}Foto zensieren{% endblock %}

{% block content %}
<div class="container">
    <div class="row mb-3">
        <div class="col-12">
            <h2>
                Foto zensieren
            </h2>

            <p class="lead">
                Markiere mit der Maus auf dem Foto jene Bereiche, die du unkenntlich machen m√∂chtest.
            </p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <img id="photo" class="img-fluid" src="{{ vich_uploader_asset(photo, 'imageFile')|imagine_filter('gallery_photo_standard') }}"/>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="btn-group float-end" role="group">
                <a href="javascript:window.location=document.referrer;" class="btn btn-secondary btn-sm">
                    <i class="far fa-times me-1"></i> Abbrechen
                </a>
                <button id="save" class="btn btn-primary btn-sm">
                    <i class="far fa-save me-1"></i> Speichern
                </button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

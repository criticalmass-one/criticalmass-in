{% extends 'Template/StandardTemplate.html.twig' %}

{% set previous_photo = previous_entity(photo) %}
{% set next_photo = next_entity(photo) %}

{% block title %}Foto platzieren{% endblock %}

{% block breadcrumb %}
    <li>
        <a href="{{ path('caldera_criticalmass_city_list') }}">
            Städteliste
        </a>
    </li>
    <li>
        <a href="{{ object_path(photo.ride.city) }}">
            {{ photo.ride.city.title }}
        </a>
    </li>
    <li>
        <a href="{{ object_path(photo.ride) }}">
            {{ photo.ride.title }}
        </a>
    </li>
    <li class="active">
        Foto platzieren
    </li>
{% endblock %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>
                    Foto platzieren
                </h1>

                <p class="lead">
                    Hier kannst du das folgende Foto auf der Karte platzieren oder verschieben.
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3 text-center">
                <img class="img-fluid img-thumbnail"
                     src="{{ vich_uploader_asset(photo, 'imageFile')|imagine_filter('gallery_photo_thumb') }}"/>
            </div>

            <div class="col-md-9">
                <div id="map-photo"
                     class="map"
                     data-controller="map--form-map"
                     style="height: 50vh;"

                     data-map--form-map-center-latitude-value="{{ photo.latitude }}"
                     data-map--form-map-center-longitude-value="{{ photo.longitude }}"
                     data-map--form-map-zoom-value="13"

                     data-map--form-map-marker-latitude-target-value="{{ form.latitude.vars.id }}"
                     data-map--form-map-marker-longitude-target-value="{{ form.longitude.vars.id }}"

                     data-map--form-map-marker-icon-value="fa-camera"
                     data-map--form-map-marker-color-value="yellow"
                     data-map--form-map-marker-shape-value="square"
                     data-map--form-map-marker-prefix-value="fas"
                ></div>

            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-12">
                {{ form_start(form) }}
                {{ form_widget(form.latitude) }}
                {{ form_widget(form.longitude) }}

                <div class="btn-group float-end" role="group" aria-label="Foto speichern">
                    <a href="javascript:window.location=document.referrer;" class="btn btn-secondary">
                        Abbrechen
                    </a>
                    <button type="submit" class="btn btn-success">
                        Speichern
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-12">
                <nav aria-label="Foto-Navigation">
                    <ul class="pagination justify-content-between mb-0">
                        {% if previous_photo %}
                            <li class="page-item">
                                <a class="page-link" href="{{ object_path(previous_photo) }}">
                                    &larr; Voriges Foto
                                </a>
                            </li>
                        {% else %}
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                                    &larr; Voriges Foto
                                </a>
                            </li>
                        {% endif %}

                        {% if next_photo %}
                            <li class="page-item">
                                <a class="page-link" href="{{ object_path(next_photo) }}">
                                    Nächstes Foto &rarr;
                                </a>
                            </li>
                        {% else %}
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                                    Nächstes Foto &rarr;
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}

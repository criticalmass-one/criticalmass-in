{% extends 'Template/StandardTemplate.html.twig' %}
{% import 'Template/Macros/breadcrumb.html.twig' as breadcrumb %}

{% block title %}Critical Mass im {{ startDateTime|format_datetime(pattern='MMMM yyyy') }}{% endblock %}

{% block breadcrumb %}
    {{ breadcrumb.item('Timeline', path('caldera_criticalmass_timeline_index')) }}
    {{ breadcrumb.active(startDateTime|format_datetime(pattern='MMMM yyyy')) }}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>
                    Die Critical Mass im {{ startDateTime|format_datetime(pattern='MMMM yyyy') }}
                </h1>

                <p class="lead">
                    Schau dir an, was im {{ startDateTime|format_datetime(pattern='MMMM yyyy') }} bei der Critical Mass passiert
                    ist.
                </p>
            </div>
        </div>

        <div data-controller="timeline"
             data-timeline-api-url-value="{{ apiUrl }}"
             data-timeline-year-value="{{ year }}"
             data-timeline-month-value="{{ month }}">
            <div data-timeline-target="loading" class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Lädt…</span>
                </div>
            </div>

            <div data-timeline-target="tabs"></div>
            <div class="tab-content mt-3" data-timeline-target="tabContent"></div>
            <div data-timeline-target="navigation"></div>
        </div>
    </div>
{% endblock %}

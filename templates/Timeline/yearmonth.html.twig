{% extends 'Template/StandardTemplate.html.twig' %}
{% import 'Template/Macros/breadcrumb.html.twig' as breadcrumb %}

{% block title %}Timeline{% endblock %}

{% block breadcrumb %}
    {{ breadcrumb.active('Timeline') }}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>
                    Timeline
                </h1>

                <p class="lead">
                    Schau dir an, was bei der Critical Mass passiert.
                </p>
            </div>
        </div>

        <div data-controller="timeline"
             data-timeline-api-url-value="{{ apiUrl }}"
             data-timeline-initial-limit-value="10"
             data-timeline-batch-size-value="20">
            <div data-timeline-target="loading" class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Lädt…</span>
                </div>
            </div>

            <div data-timeline-target="items"></div>

            <div class="text-center my-4">
                <button class="btn btn-primary d-none"
                        data-timeline-target="loadMore"
                        data-action="timeline#loadMore">
                    Mehr laden
                </button>
            </div>
        </div>
    </div>
{% endblock %}

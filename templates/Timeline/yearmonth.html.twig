{% extends 'Template/StandardTemplate.html.twig' %}{% block title %}Critical Mass im {{ startDateTime|format_date('MMMM YYYY') }}{% endblock %}

{% import 'Bootstrap/bootstrap_macros.html.twig' as bootstrap %}

{% block breadcrumb %}
    {{ bootstrap.breadcrumb_item('Timeline', path('caldera_criticalmass_timeline_index')) }}
    {{ bootstrap.breadcrumb_item(startDateTime|format_date('MMMM YYYY'), '', true) }}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2>
                    Die Critical Mass im {{ startDateTime|format_date('MMMM YYYY') }}
                </h2>

                <p class="lead">
                    Schau dir an, was im {{ startDateTime|format_date('MMMM YYYY') }} bei der Critical Mass passiert
                    ist.
                </p>
            </div>
        </div>

        <div>
            <ul class="nav nav-tabs" role="tablist">
                {% if timelineContentList.standard is defined %}
                    <li role="presentation" class="active">
                        <a href="#standard" aria-controls="standard" role="tab" data-toggle="tab">
                            <i class="far fa-clock"></i>
                            Neuigkeiten
                        </a>
                    </li>
                {% endif %}

                {% if timelineContentList.facebook is defined %}
                    <li role="presentation">
                        <a href="#facebook" aria-controls="facebook" role="tab" data-toggle="tab">
                            <i class="fab fa-facebook"></i>
                            Facebook-Beiträge
                        </a>
                    </li>
                {% endif %}

                {% if timelineContentList.twitter is defined %}
                    <li role="presentation">
                        <a href="#twitter" aria-controls="twitter" role="tab" data-toggle="tab">
                            <i class="fab fa-twitter"></i>
                            Tweets
                        </a>
                    </li>
                {% endif %}

                {% if timelineContentList.instagram_profile is defined %}
                    <li role="presentation">
                        <a href="#instagram_profile" aria-controls="twitter" role="tab" data-toggle="tab">
                            <i class="fab fa-instagram"></i>
                            Instagram-Fotos
                        </a>
                    </li>
                {% endif %}

                {% if timelineContentList.homepage is defined %}
                    <li role="presentation">
                        <a href="#www" aria-controls="www" role="tab" data-toggle="tab">
                            <i class="far fa-globe"></i>
                            Blog-Beiträge
                        </a>
                    </li>
                {% endif %}
            </ul>

            <div class="tab-content margin-top-medium">
                {% set hasActive = false %}

                {% if timelineContentList.standard is defined %}
                    <div role="tabpanel" class="tab-pane{% if hasActive == false %} active{% endif %}" id="standard">
                        {% for content in timelineContentList.standard %}
                            {{ content|raw }}
                        {% endfor %}
                    </div>

                    {% set hasActive = true %}
                {% endif %}

                {% if timelineContentList.facebook is defined %}
                    <div role="tabpanel" class="tab-pane{% if hasActive == false %} active{% endif %}" id="facebook">
                        {% for content in timelineContentList.facebook %}
                            {{ content|raw }}
                        {% endfor %}
                    </div>

                    {% set hasActive = true %}
                {% endif %}

                {% if timelineContentList.twitter is defined %}
                    <div role="tabpanel" class="tab-pane{% if hasActive == false %} active{% endif %}" id="twitter">
                        {% for content in timelineContentList.twitter %}
                            {{ content|raw }}
                        {% endfor %}
                    </div>

                    {% set hasActive = true %}
                {% endif %}

                {% if timelineContentList.instagram_profile is defined %}
                    <div role="tabpanel" class="tab-pane{% if hasActive == false %} active{% endif %}" id="instagram_profile">
                        {% for content in timelineContentList.instagram_profile %}
                            {{ content|raw }}
                        {% endfor %}
                    </div>

                    {% set hasActive = true %}
                {% endif %}

                {% if timelineContentList.homepage is defined %}
                    <div role="tabpanel" class="tab-pane{% if hasActive == false %} active{% endif %}" id="www">
                        {% for content in timelineContentList.homepage %}
                            {{ content|raw }}
                        {% endfor %}
                    </div>

                    {% set hasActive = true %}
                {% endif %}
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                {% include('Timeline/_pagination.html.twig') with { 'previousMonth': previousDateTime, 'nextMonth': nextDateTime } %}
            </div>
        </div>
    </div>
{% endblock %}

<div>
    {% set hasActiveTab = false %}
    <ul class="nav nav-tabs" role="tablist">
        {% if timelineContentList.standard is defined %}
            <li class="nav-item" role="presentation">
                <button class="nav-link{% if not hasActiveTab %} active{% endif %}" id="standard-tab" data-bs-toggle="tab" data-bs-target="#standard" type="button" role="tab" aria-controls="standard" aria-selected="{{ not hasActiveTab ? 'true' : 'false' }}">
                    <i class="far fa-clock"></i>
                    Neuigkeiten
                </button>
            </li>
            {% set hasActiveTab = true %}
        {% endif %}

        {% if timelineContentList.facebook is defined %}
            <li class="nav-item" role="presentation">
                <button class="nav-link{% if not hasActiveTab %} active{% endif %}" id="facebook-tab" data-bs-toggle="tab" data-bs-target="#facebook" type="button" role="tab" aria-controls="facebook" aria-selected="{{ not hasActiveTab ? 'true' : 'false' }}">
                    <i class="fab fa-facebook"></i>
                    Facebook-Beiträge
                </button>
            </li>
            {% set hasActiveTab = true %}
        {% endif %}

        {% if timelineContentList.twitter is defined %}
            <li class="nav-item" role="presentation">
                <button class="nav-link{% if not hasActiveTab %} active{% endif %}" id="twitter-tab" data-bs-toggle="tab" data-bs-target="#twitter" type="button" role="tab" aria-controls="twitter" aria-selected="{{ not hasActiveTab ? 'true' : 'false' }}">
                    <i class="fab fa-twitter"></i>
                    Tweets
                </button>
            </li>
            {% set hasActiveTab = true %}
        {% endif %}

        {% if timelineContentList.instagram_profile is defined %}
            <li class="nav-item" role="presentation">
                <button class="nav-link{% if not hasActiveTab %} active{% endif %}" id="instagram-tab" data-bs-toggle="tab" data-bs-target="#instagram_profile" type="button" role="tab" aria-controls="instagram_profile" aria-selected="{{ not hasActiveTab ? 'true' : 'false' }}">
                    <i class="fab fa-instagram"></i>
                    Instagram-Fotos
                </button>
            </li>
            {% set hasActiveTab = true %}
        {% endif %}

        {% if timelineContentList.homepage is defined %}
            <li class="nav-item" role="presentation">
                <button class="nav-link{% if not hasActiveTab %} active{% endif %}" id="www-tab" data-bs-toggle="tab" data-bs-target="#www" type="button" role="tab" aria-controls="www" aria-selected="{{ not hasActiveTab ? 'true' : 'false' }}">
                    <i class="far fa-globe"></i>
                    Blog-Beiträge
                </button>
            </li>
            {% set hasActiveTab = true %}
        {% endif %}

        {% if timelineContentList.mastodon is defined %}
            <li class="nav-item" role="presentation">
                <button class="nav-link{% if not hasActiveTab %} active{% endif %}" id="mastodon-tab" data-bs-toggle="tab" data-bs-target="#mastodon" type="button" role="tab" aria-controls="mastodon" aria-selected="{{ not hasActiveTab ? 'true' : 'false' }}">
                    <i class="fab fa-mastodon"></i>
                    Mastodon-Beiträge
                </button>
            </li>
            {% set hasActiveTab = true %}
        {% endif %}
    </ul>

    <div class="tab-content mt-3">
        {% set hasActive = false %}

        {% if timelineContentList.standard is defined %}
            <div role="tabpanel" class="tab-pane fade{% if hasActive == false %} show active{% endif %}" id="standard" aria-labelledby="standard-tab">
                {% for content in timelineContentList.standard %}
                    {{ content|raw }}
                {% endfor %}
            </div>

            {% set hasActive = true %}
        {% endif %}

        {% if timelineContentList.facebook is defined %}
            <div role="tabpanel" class="tab-pane fade{% if hasActive == false %} show active{% endif %}" id="facebook" aria-labelledby="facebook-tab">
                {% for content in timelineContentList.facebook %}
                    {{ content|raw }}
                {% endfor %}
            </div>

            {% set hasActive = true %}
        {% endif %}

        {% if timelineContentList.twitter is defined %}
            <div role="tabpanel" class="tab-pane fade{% if hasActive == false %} show active{% endif %}" id="twitter" aria-labelledby="twitter-tab">
                {% for content in timelineContentList.twitter %}
                    {{ content|raw }}
                {% endfor %}
            </div>

            {% set hasActive = true %}
        {% endif %}

        {% if timelineContentList.instagram_profile is defined %}
            <div role="tabpanel" class="tab-pane fade{% if hasActive == false %} show active{% endif %}" id="instagram_profile" aria-labelledby="instagram-tab">
                {% for content in timelineContentList.instagram_profile %}
                    {{ content|raw }}
                {% endfor %}
            </div>

            {% set hasActive = true %}
        {% endif %}

        {% if timelineContentList.homepage is defined %}
            <div role="tabpanel" class="tab-pane fade{% if hasActive == false %} show active{% endif %}" id="www" aria-labelledby="www-tab">
                {% for content in timelineContentList.homepage %}
                    {{ content|raw }}
                {% endfor %}
            </div>

            {% set hasActive = true %}
        {% endif %}

        {% if timelineContentList.mastodon is defined %}
            <div role="tabpanel" class="tab-pane fade{% if hasActive == false %} show active{% endif %}" id="mastodon" aria-labelledby="mastodon-tab">
                {% for content in timelineContentList.mastodon %}
                    {{ content|raw }}
                {% endfor %}
            </div>

            {% set hasActive = true %}
        {% endif %}
    </div>
</div>

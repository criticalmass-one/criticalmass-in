<template id="timeline-user-column">
{% verbatim %}
<div class="col-xs-3 col-sm-3 col-md-2 col-lg-2 text-center">
    {{#if user.avatarUrl}}
        <img class="media-object round-media-object img-responsive img-fluid"
             src="{{user.avatarUrl}}"/>
    {{/if}}

    <p class="hidden-xs">
        <strong>
            {{user.username}}
        </strong>
    </p>

    <p>
        <small>
            <time title="{{dateTimeFormatted}} Uhr">
                {{timeAgo}}
            </time>
        </small>
    </p>
</div>
{% endverbatim %}
</template>


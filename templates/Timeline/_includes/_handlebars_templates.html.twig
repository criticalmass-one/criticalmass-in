<template id="timeline-cityCreated-template">
{% verbatim %}
<div class="row margin-bottom-medium">
    {{> userColumn}}

    <div class="col-xs-9 col-sm-9 col-md-10 col-lg-10">
        <div class="row">
            <div class="col-md-12">
                <strong>
                    {{user.username}}
                </strong>
                hat eine neue Stadt hinzugefuegt:
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <a href="{{cityUrl}}">
                    <h4>
                        {{cityName}}
                    </h4>
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div
                    id="map-{{uniqId}}"
                    class="map"
                    data-controller="map--map"
                    style="height: 150px;"
                    data-map--map-center-latitude-value="{{latitude}}"
                    data-map--map-center-longitude-value="{{longitude}}"
                    data-map--map-zoom-value="13"
                    data-map--map-lock-map-value="true"
                    data-map--map-marker-latitude-value="{{latitude}}"
                    data-map--map-marker-longitude-value="{{longitude}}"
                    data-map--map-marker-type-value="city"
                    data-map--map-vector-value="false"
                >
                </div>
            </div>
        </div>
    </div>
</div>
{% endverbatim %}
</template>


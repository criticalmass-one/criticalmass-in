<div class="row mt-3 timeline-item-ride{% if not item.enabled %}--disabled{% endif %}">
    {{ include('Timeline/_includes/user_column.html.twig') }}

    <div class="col-9 col-md-10">
        <div class="row">
            <div class="col-12">
                <strong>
                    {{ item.user.username }}
                </strong>
                hat eine Tour editiert:
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <a href="{{ object_path(item.ride) }}">
                    <h4>
                        {{ item.rideTitle }}
                    </h4>
                </a>
            </div>
        </div>

        {% if item.ride.latitude and item.ride.longitude %}
            <div class="row">
                <div class="col-12">
                    <div id="map-{{ item.uniqId }}" class="map timeline-item-ride-map" style="height: 150px;"
                         data-map-center-latitude="{{ item.ride.latitude }}"
                         data-map-center-longitude="{{ item.ride.longitude }}"
                         data-map-zoomlevel="13"
                         data-lock-map="true"
                         data-map-marker-latitude="{{ item.ride.latitude }}"
                         data-map-marker-longitude="{{ item.ride.longitude }}"
                         data-map-marker-type="ride"
                    ></div>
                </div>
            </div>
        {% endif %}
    </div>
</div>

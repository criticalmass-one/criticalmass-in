<div class="row mb-4 timeline-item-ride{% if not item.rideEnabled %}--disabled{% endif %}">
    {{ include('Timeline/_includes/user_column.html.twig') }}

    <div class="col-9 col-sm-9 col-md-10 col-lg-10">
        {% set titleHtml %}
            <div class="d-flex flex-wrap align-items-center gap-2">
                <span>
                    <strong>{{ item.user.username }}</strong> sch√§tzt, dass {{ item.estimatedParticipants }} Radfahrer an
                    <a class="link-primary" href="{{ object_path(item.ride) }}">{{ item.rideTitle }}</a>
                    teilgenommen haben
                </span>
            </div>
        {% endset %}

        {% set counter = item.estimatedParticipants %}
        {% if counter < 1000 %}{% set counter = 0 ~ counter %}{% endif %}
        {% if counter < 100 %}{% set counter = 0 ~ counter %}{% endif %}
        {% if counter < 10 %}{% set counter = 0 ~ counter %}{% endif %}

        {% set bodyHtml %}
            <div class="text-center">
                <div class="bg-body-tertiary border rounded-4 p-3 d-inline-block">
                    <div class="flipcounter">
                        <div class="flipbreak"></div>
                        <div class="digit">{{ counter[0:1] }}</div>
                        <div class="digit">{{ counter[1:1] }}</div>
                        <div class="digit">{{ counter[2:1] }}</div>
                        <div class="digit">{{ counter[3:1] }}</div>
                    </div>
                </div>
            </div>
        {% endset %}

        {{ include('Timeline/_includes/timeline_card.html.twig', {
            type: 'ride-estimate',
            icon: 'far fa-users',
            titleHtml: titleHtml,
            bodyHtml: bodyHtml
        }) }}
    </div>
</div>

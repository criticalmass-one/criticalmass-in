<div class="row mt-3">
    {{ include('Timeline/_includes/user_column.html.twig') }}

    <div class="col-9 col-md-10">
        <div class="row">
            <div class="col-12">
                <strong>
                    {{ item.user.username }}
                </strong>
                hat eine Stadt editiert:
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <a href="{{ object_path(item.city) }}">
                    <h4>
                        {{ item.cityName }}
                    </h4>
                </a>
            </div>
        </div>

        {% if item.city.latitude and item.city.longitude %}
        <div class="row">
            <div class="col-12">
                <div id="map-{{ item.uniqId }}" style="height: 150px;" class="map"
                     data-map-center-latitude="{{ item.city.latitude }}"
                     data-map-center-longitude="{{ item.city.longitude }}"
                     data-map-zoomlevel="13"
                     data-lock-map="true"
                     data-map-marker-latitude="{{ item.city.latitude }}"
                     data-map-marker-longitude="{{ item.city.longitude }}"
                     data-map-marker-type="city"
                ></div>
            </div>
        </div>
        {% endif %}
    </div>
</div>


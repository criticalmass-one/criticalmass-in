<div class="row mt-3 timeline-item-ride{% if not item.rideEnabled %}--disabled{% endif %}">
    {{ include('Timeline/_includes/user_column.html.twig') }}

    <div class="col-9 col-md-10">
        <div class="row">
            <div class="col-12">
                <strong>
                    {{ item.user.username }}
                </strong>
                hat
                <a href="{{ objectPath(item.ride, 'caldera_criticalmass_photo_ride_list') }}">
                    {{ item.counter }} Fotos
                </a> zur Tour
                <strong class="ride-title">
                    <a href="{{ objectPath(item.ride) }}">
                        {{ item.ride.title }}
                    </a>
                </strong>
                hochgeladen
            </div>
        </div>

        <div class="row">
            {% for previewPhoto in item.previewPhotoList %}
            <div class="col-4">
                <a href="{{ objectPath(previewPhoto) }}">
                    <img src="{{ vich_uploader_asset(previewPhoto, 'imageFile')|imagine_filter('gallery_photo_thumb') }}" class="img-fluid img-thumbnail" />
                </a>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

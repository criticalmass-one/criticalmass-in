<div class="row mt-3 timeline-item-ride{% if not item.rideEnabled %}--disabled{% endif %}">
    {{ include('Timeline/_includes/user_column.html.twig') }}

    <div class="col-9 col-md-10">
        <div class="row">
            <div class="col-12">
                <strong>
                    {{ item.user.username }}
                </strong>
                hat einen Track hochgeladen:
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <a href="{{ object_path(item.ride) }}">
                    <h4>
                        {{ item.rideTitle }}
                    </h4>
                </a>
            </div>
        </div>

        {% if item.polyline %}
        <div class="row">
            <div class="col-12">
                <div id="map-{{ item.uniqId }}"
                     class="map timeline-item-ride-map"
                     data-lock-map="true"
                     data-map-marker-clickable="false"
                     data-polyline-color="{{ item.polylineColor }}"
                     data-polyline="{{ item.polyline }}"
                     style="height: 150px;">
                </div>
            </div>
        </div>
        {% endif %}

        <div class="row">
            <div class="col-4">
                <dl>
                    <dt>
                        Datum:
                    </dt>

                    <dd>
                        {{ item.ride.dateTime|date('d.m.Y') }}
                    </dd>
                </dl>
            </div>

            <div class="col-4">
                <dl>
                    <dt>
                        LÃ¤nge:
                    </dt>

                    <dd>
                        {{ item.distance|number_format(2, ',', '.') }}&nbsp;km
                    </dd>
                </dl>
            </div>

            <div class="col-4">
                <dl>
                    <dt>
                        Dauer:
                    </dt>

                    <dd>
                        {{ human_duration(item.duration) }}
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

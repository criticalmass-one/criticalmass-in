<div class="row margin-bottom-medium">
    {{ include('Timeline/_includes/user_column.html.twig') }}

    <div class="col-xs-9 col-sm-9 col-md-10 col-lg-10">
        <div class="row">
            <div class="col-md-12">
                <strong>
                    {{ item.user.username }}
                </strong>
                hat einen Track hochgeladen:
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <a href="{{ objectPath(item.ride) }}">
                    <h4>
                        {{ item.rideTitle }}
                    </h4>
                </a>
            </div>
        </div>

        {% if item.polyline %}
        <div class="row">
            <div class="col-md-12">
                <div id="map-{{ item.uniqId }}"
                     data-polyline="{{ item.polyline }}"
                     data-polyline-color="{{ item.polylineColor }}"
                     data-lock-map="true"
                     data-map-marker-clickable="false"
                     style="height: 150px;">
                </div>
            </div>
        </div>
        {% endif %}

        <div class="row">
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <dl>
                    <dt>
                        Datum:
                    </dt>

                    <dd>
                        {{ item.ride.dateTime|date('d.m.Y') }}
                    </dd>
                </dl>
            </div>

            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <dl>
                    <dt>
                        LÃ¤nge:
                    </dt>

                    <dd>
                        {{ item.distance|number_format(2, ',', '.') }} Kilometer
                    </dd>
                </dl>
            </div>

            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <dl>
                    <dt>
                        Dauer:
                    </dt>

                    <dd>
                        {{ human_duration(item.duration) }}
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

{% if item.polyline %}
<script type="text/javascript">
    CriticalMass.loadModule('AutoMap', 'map-{{ item.uniqId }}');
</script>
{% endif %}

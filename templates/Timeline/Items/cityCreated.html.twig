<div class="row margin-bottom-medium">
    {{ include('Timeline/_includes/user_column.html.twig') }}

    <div class="col-xs-9 col-sm-9 col-md-10 col-lg-10">
        <div class="row">
            <div class="col-md-12">
                <strong>
                    {{ item.user.username }}
                </strong>
                hat eine neue Stadt hinzugef√ºgt:
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <a href="{{ object_path(item.city) }}">
                    <h4>
                        {{ item.cityName }}
                    </h4>
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div
                    id="map-{{ item.uniqId }}"
                    class="map"
                    data-controller="map--map"
                    style="height: 150px;"
                    data-map---map-center-latitude="{{ item.city.latitude }}"
                    data-map---map-center-longitude="{{ item.city.longitude }}"
                    data-map---map-zoomlevel="13"
                    data-map---lock-map="true"
                    data-map---map-marker-latitude="{{ item.city.latitude }}"
                    data-map---map-marker-longitude="{{ item.city.longitude }}"
                    data-map---map-marker-type="city">
                </div>
            </div>
        </div>
    </div>
</div>

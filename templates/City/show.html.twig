{% extends 'Template/StandardTemplate.html.twig' %}
{% import 'Template/Macros/breadcrumb.html.twig' as breadcrumb %}

{% block title %}{{ city.title }}{% endblock %}

{% block breadcrumb %}
    {{ breadcrumb.item('Städteliste', path('caldera_criticalmass_city_list')) }}
    {{ breadcrumb.active(city.city) }}
{% endblock %}

{% block content %}
    <div class="container" itemscope itemtype="http://schema.org/Organization">
        {{ include('Flash/_flash.html.twig') }}

        {{ include('City/Includes/_tabs.html.twig', { tab: 'city' }) }}

        {# Hero Section #}
        <div class="card mb-4 border-0 shadow-sm overflow-hidden">
            <div class="row g-0">
                {% if city.imageName %}
                    {# Visueller Bereich mit Bild - 7 Spalten #}
                    <div class="col-lg-7">
                        <div class="position-relative h-100" style="min-height: 300px;">
                            <img src="{{ vich_uploader_asset(city, 'imageFile')|imagine_filter('city_image_wide') }}"
                                 alt="{{ city.title }}"
                                 class="w-100 h-100 object-fit-cover">
                        </div>
                    </div>

                    {# Info-Bereich - 5 Spalten #}
                    <div class="col-lg-5">
                        <div class="card-body d-flex flex-column h-100">
                            <div class="mb-3">
                                <h1 class="h3 mb-1" itemprop="name">{{ city.title }}</h1>
                                {% if city.punchline %}
                                    <p class="text-muted mb-0">{{ city.punchline }}</p>
                                {% endif %}
                            </div>

                            {# Quick Info #}
                            {% if currentRide %}
                                <div class="row g-3 mb-3">
                                    <div class="col-6">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-2"
                                                 style="width: 36px; height: 36px; min-width: 36px;">
                                                <i class="far fa-calendar-alt text-primary"></i>
                                            </div>
                                            <div>
                                                <small class="text-muted d-block">Nächste Tour</small>
                                                <strong>{{ currentRide.dateTime|date('d.m.Y', currentRide.city.timezone) }}</strong>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-6">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-success bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-2"
                                                 style="width: 36px; height: 36px; min-width: 36px;">
                                                <i class="far fa-clock text-success"></i>
                                            </div>
                                            <div>
                                                <small class="text-muted d-block">Uhrzeit</small>
                                                <strong>{{ currentRide.dateTime|date('H:i', currentRide.city.timezone) }} Uhr</strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}

                            {# Social Media Links inline #}
                            {% if socialNetworkProfiles|length > 0 %}
                                <div class="mb-3">
                                    <span class="text-muted me-2">
                                        <i class="far fa-share-alt me-1"></i>Links:
                                    </span>
                                    {% for profile in socialNetworkProfiles %}
                                        {% set network = getNetwork(profile.network) %}
                                        {% if network %}
                                            <a href="{{ profile.identifier }}"
                                               class="btn btn-sm me-1 mb-1"
                                               style="background-color: {{ network.backgroundColor }}; color: {{ network.textColor }};"
                                               target="_blank"
                                               rel="noopener">
                                                <i class="{{ network.icon }}"></i>
                                            </a>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            {% endif %}

                            {# Aktions-Buttons am unteren Rand #}
                            <div class="mt-auto">
                                {% if currentRide %}
                                    <div class="btn-group w-100 mb-2" role="group">
                                        <a href="{{ object_path(currentRide) }}" class="btn btn-primary btn-sm">
                                            <i class="far fa-bicycle me-1"></i>
                                            <span class="d-none d-sm-inline">Tour anzeigen</span>
                                        </a>
                                        <a href="{{ object_path(city, 'caldera_criticalmass_city_listrides') }}" class="btn btn-outline-primary btn-sm">
                                            <i class="far fa-list me-1"></i>
                                            <span class="d-none d-sm-inline">Alle Touren</span>
                                        </a>
                                    </div>
                                {% endif %}

                                {% if app.user %}
                                    <div class="dropdown">
                                        <button type="button" class="btn btn-outline-success btn-sm w-100 dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="far fa-cogs me-1"></i>
                                            Optionen
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end w-100">
                                            <li>
                                                <a class="dropdown-item" href="{{ object_path(city, 'caldera_criticalmass_city_edit') }}">
                                                    <i class="far fa-cogs me-2"></i>Stadt editieren
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" href="{{ object_path(city, 'caldera_criticalmass_ride_add') }}">
                                                    <i class="far fa-plus me-2"></i>Tour hinzufügen
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" href="{{ object_path(city, 'caldera_criticalmass_citycycle_list') }}">
                                                    <i class="far fa-calendar me-2"></i>Turnus verwalten
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" href="{{ object_path(city, 'criticalmass_socialnetwork_city_list') }}">
                                                    <i class="far fa-at me-2"></i>Soziale Netzwerke verwalten
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                {% else %}
                                    <button type="button"
                                            class="btn btn-outline-success btn-sm w-100"
                                            data-controller="hint-modal"
                                            data-modal-hint-title="{{ 'hint_modal.city.options_button.title'|trans }}"
                                            data-modal-hint-text="{{ 'hint_modal.city.options_button.text'|trans({'%city%': city.city}) }}"
                                            data-modal-hint-size="md">
                                        <i class="far fa-cogs me-1"></i>
                                        Optionen
                                    </button>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% else %}
                    {# Kein Bild vorhanden - volle Breite #}
                    <div class="col-12">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h1 class="h3 mb-1" itemprop="name">{{ city.title }}</h1>
                                    {% if city.punchline %}
                                        <p class="text-muted mb-0">{{ city.punchline }}</p>
                                    {% endif %}
                                </div>

                                {# Options Button #}
                                {% if app.user %}
                                    <div class="dropdown">
                                        <button type="button" class="btn btn-outline-success btn-sm dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="far fa-cogs me-1"></i>
                                            Optionen
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li>
                                                <a class="dropdown-item" href="{{ object_path(city, 'caldera_criticalmass_city_edit') }}">
                                                    <i class="far fa-cogs me-2"></i>Stadt editieren
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" href="{{ object_path(city, 'caldera_criticalmass_ride_add') }}">
                                                    <i class="far fa-plus me-2"></i>Tour hinzufügen
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" href="{{ object_path(city, 'caldera_criticalmass_citycycle_list') }}">
                                                    <i class="far fa-calendar me-2"></i>Turnus verwalten
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" href="{{ object_path(city, 'criticalmass_socialnetwork_city_list') }}">
                                                    <i class="far fa-at me-2"></i>Soziale Netzwerke verwalten
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                {% else %}
                                    <button type="button"
                                            class="btn btn-outline-success btn-sm"
                                            data-controller="hint-modal"
                                            data-modal-hint-title="{{ 'hint_modal.city.options_button.title'|trans }}"
                                            data-modal-hint-text="{{ 'hint_modal.city.options_button.text'|trans({'%city%': city.city}) }}"
                                            data-modal-hint-size="md">
                                        <i class="far fa-cogs me-1"></i>
                                        Optionen
                                    </button>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="row">
            {# Hauptinhalt - 9 Spalten #}
            <div class="col-lg-8">
                {# Beschreibung #}
                {% if city.longDescription %}
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body">
                            <div class="content">
                                {{ city.longDescription|markdown }}
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="card bg-light border-0 mb-4">
                        <div class="card-body text-center py-5">
                            <i class="far fa-edit fa-3x text-muted mb-3"></i>
                            <h5>Beschreibung fehlt</h5>
                            <p class="text-muted mb-3">
                                Schade, bislang hat noch niemand Informationen über {{ city.city }} hinterlegt.
                            </p>
                            <ul class="list-unstyled text-muted text-start mx-auto" style="max-width: 400px;">
                                <li class="mb-2"><i class="far fa-check me-2"></i>Seit wann gibt es die Critical Mass in {{ city.city }}?</li>
                                <li class="mb-2"><i class="far fa-check me-2"></i>Wie lange dauern eure Touren?</li>
                                <li class="mb-2"><i class="far fa-check me-2"></i>Wo fahrt ihr ungefähr lang?</li>
                                <li class="mb-2"><i class="far fa-check me-2"></i>Welche Probleme gibt es in {{ city.city }} für den Radverkehr?</li>
                            </ul>
                            <a href="{{ object_path(city, 'caldera_criticalmass_city_edit') }}" class="btn btn-primary mt-3">
                                <i class="far fa-edit me-1"></i>{{ city.city }} beschreiben
                            </a>
                        </div>
                    </div>
                {% endif %}

                {# Fotos #}
                {% if feature('photos') and photos|length > 0 %}
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white border-bottom">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="card-title mb-0">
                                    <i class="far fa-images text-primary me-2"></i>Fotos aus {{ city.city }}
                                </h5>
                                <a href="{{ object_path(city, 'caldera_criticalmass_city_listgalleries') }}" class="btn btn-outline-primary btn-sm">
                                    <i class="far fa-arrow-right me-1"></i>Alle Fotos
                                </a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row g-2">
                                {% for photo in photos %}
                                    <div class="col-6 col-sm-4 col-md-3">
                                        <a href="{{ object_path(photo) }}" class="d-block">
                                            <img class="img-fluid rounded"
                                                 src="{{ vich_uploader_asset(photo, 'imageFile')|imagine_filter('gallery_photo_thumb') }}"
                                                 alt="Foto aus {{ city.city }}"/>
                                        </a>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>

            {# Sidebar - 4 Spalten #}
            <div class="col-lg-4">
                {% include 'City/Includes/_nextTour.html.twig' with { 'city': city, 'currentRide': currentRide } %}

                {% include 'City/Includes/_socialMedia.html.twig' with { 'city': city } %}

                {% include 'City/Includes/_locations.html.twig' with { 'city': city, 'locations': locations } %}

                {% if nearCities and nearCities|length > 0 %}
                    {% include 'City/Includes/_nearCities.html.twig' with { 'nearCities': nearCities } %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

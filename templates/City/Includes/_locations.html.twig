{% if locations|length > 0 %}
    <div class="card mb-3">
        <div class="card-header">
            <h3 class="card-title mb-0">
                Treffpunkte
            </h3>
        </div>
        <div class="card-body">
            <ul class="mb-0">
                {% for location in locations %}
                    <li>
                        <a href="{{ object_path(location) }}">
                            {{ location.title }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endif %}

    <div class="card-body">
        {% if currentRide %}
            <h5 class="text-center mb-3">
                <a href="{{ object_path(currentRide) }}" class="text-decoration-none">
                    {{ currentRide.title }}
                </a>
            </h5>

            <div class="row">

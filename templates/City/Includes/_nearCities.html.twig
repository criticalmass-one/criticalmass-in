{% if nearCities|length > 0 %}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'city.near_cities_heading'|trans }}</h3>
    </div>
    <div class="panel-body">
        <ul>
            {% for city in nearCities %}
                <li>
                    <a href="{{ object_path(city) }}">
                        {{ city.city }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
{% endif %}

{% extends 'Template/StandardTemplate.html.twig' %}

{% block title %}Städte-Übersicht{% endblock %}

{% import 'Bootstrap/bootstrap_macros.html.twig' as bootstrap %}

{% block breadcrumb %}
    {{ bootstrap.breadcrumb_item('Städteliste', path('caldera_criticalmass_city_list')) }}
    {{ bootstrap.breadcrumb_item(city.city, objectPath(city)) }}
    {{ bootstrap.breadcrumb_item('Foto-Galerien', '', true) }}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2>
                    Fotos aus {{ city.city }}
                </h2>

                <p class="lead">
                    Hier siehst du eine Übersicht von Critical-Mass-Touren aus {{ city.city }}, zu denen Fotos hochgeladen wurden.
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <table id="cityRideList" class="table">
                    <thead>
                    <tr>
                        <th>
                            Datum
                        </th>
                        <th>
                            Titel
                        </th>
                        <th>
                            Fotos
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for key, ride in result.rides %}
                        <tr class="ride">
                            <td>
                                <a href="{{ object_path(ride) }}">
                                    {{ ride.dateTime.format('d.m.Y') }}
                                </a>
                            </td>
                            <td>
                                <a href="{{ object_path(ride) }}">
                                    {{ ride.title }}
                                </a>
                            </td>
                            <td>
                                <a href="{{ object_path(ride, 'caldera_criticalmass_photo_ride_list') }}">
                                    {{ result.counter[key] }}
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

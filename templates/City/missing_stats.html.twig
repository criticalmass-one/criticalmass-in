{% extends 'Template/StandardTemplate.html.twig' %}

{% block title %}Touren mit fehlenden Statistiken aus {{ city.city }}{% endblock %}

{% import '_macros/breadcrumb.html.twig' as bc %}

{% block breadcrumbs %}
    {{ bc.render(
        [
            { label: 'Städteliste', url: path('caldera_criticalmass_city_list') },
            { label: city.city, url: object_path(city) },
            { label: 'Touren mit fehlenden Statistiken' },
        ],
        {
            homeLabel: 'Critical Mass',
            homeUrl: path('caldera_criticalmass_frontpage')
        }
    ) }}
{% endblock %}
    
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>
                    Touren aus {{ city.city }} mit fehlenden Statistiken
                </h1>

                <p class="lead">
                    Bei den folgenden Touren wurden keine Statistiken abgespeichert. Du kannst auf den Seiten der
                    jeweiligen Tour eine Teilnehmerzahl schätzen oder einen GPX-Track importieren.
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <table class="table align-middle">
                    <thead>
                    <tr>
                        <th>Datum</th>
                        <th>Titel</th>
                        <th>Teilnehmer</th>
                        <th>Dauer</th>
                        <th>Distanz</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for ride in rides %}
                        <tr>
                            <td>
                                <a href="{{ object_path(ride) }}">
                                    {{ ride.dateTime|date('d.m.Y') }}
                                </a>
                            </td>

                            <td>
                                <a href="{{ object_path(ride) }}">
                                    {{ ride.title }}
                                </a>
                            </td>

                            <td>
                                {{ ride.estimatedParticipants|default('fehlt') }}
                            </td>

                            <td>
                                {{ human_duration(ride.getEstimatedDurationInSeconds())|default('fehlt') }}
                            </td>

                            <td>
                                {{ ride.estimatedDistance|default('fehlt') }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% extends 'Template/StandardTemplate.html.twig' %}

{% block title %}Städte-Übersicht{% endblock %}

{% import '_macros/breadcrumb.html.twig' as bc %}

{% block breadcrumbs %}
    {{ bc.render(
        [
            { label: 'Städteliste', url: path('caldera_criticalmass_city_list') },
            { label: city.city, url: object_path(city) },
            { label: 'Tour-Übersicht' },
        ],
        {
            homeLabel: 'Critical Mass',
            homeUrl: path('caldera_criticalmass_frontpage')
        }
    ) }}
{% endblock %}

{% block content %}
    <div class="container">

        {{ include('City/Includes/_tabs.html.twig', { tab: 'ride_list' }) }}

        <div class="row">
            <div class="col-12">
                <h2>
                    Touren in dieser Stadt
                </h2>
            </div>
        </div>

        {% for message in app.flashes('success') %}
            <div class="row">
                <div class="col-12">
                    <div class="alert alert-success">
                        {{ message|raw }}
                    </div>
                </div>
            </div>
        {% endfor %}

        <div class="row">
            <div class="col-12">
                <table id="ride-list-table" class="table align-middle">
                    <thead>
                    <tr>
                        <th>Datum</th>
                        <th>Uhrzeit</th>
                        <th>Titel</th>
                        <th>Treffpunkt</th>
                        <th>Teilnehmer</th>
                        <th>Distanz</th>
                        <th>Dauer</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for ride in rides %}
                        {% include 'Common/Ride/standard_city_ride_table_row.html.twig' with { ride: ride } %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

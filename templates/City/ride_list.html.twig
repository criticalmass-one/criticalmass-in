{% extends 'Template/StandardTemplate.html.twig' %}
{% import 'Template/Macros/breadcrumb.html.twig' as breadcrumb %}

{% block title %}Städte-Übersicht{% endblock %}

{% block breadcrumb %}
    {{ breadcrumb.item('Städteliste', path('caldera_criticalmass_city_list')) }}
    {{ breadcrumb.item(city.city, object_path(city)) }}
    {{ breadcrumb.active('Tour-Übersicht') }}
{% endblock %}
    
{% block content %}
    <div class="container">

        {{ include('City/Includes/_tabs.html.twig', { tab: 'ride_list' }) }}

        <div class="row">
            <div class="col-md-12">
                <h2>
                    Touren in dieser Stadt
                </h2>
            </div>
        </div>

        {% for message in app.flashes('success') %}
            <div class="row">
                <div class="col-md-12">
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                </div>
            </div>
        {% endfor %}

        <div class="row">
            <div class="col-md-12">
                <table id="ride-list-table" class="table">
                    <thead>
                    <tr>
                        <th>
                            Datum
                        </th>
                        <th>
                            Uhrzeit
                        </th>
                        <th>
                            Titel
                        </th>
                        <th>
                            Treffpunkt
                        </th>
                        <th>
                            Teilnehmer
                        </th>
                        <th>
                            Distanz
                        </th>
                        <th>
                            Dauer
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for ride in rides %}
                    {% include 'Common/Ride/standard_city_ride_table_row.html.twig' with { ride: ride } %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

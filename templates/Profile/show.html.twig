{% extends 'Template/StandardTemplate.html.twig' %}
{% import 'Template/Macros/breadcrumb.html.twig' as breadcrumb %}

{% set bootstrap4app = true %}

{% block breadcrumb %}
    {{ breadcrumb.active(userProfile.usernameCanonical) }}
{% endblock %}

{% block content %}
    <div class="profile-header text-center" style="background-image: url(https://criticalmass.in/media/cache/frontpage_teaser_large/teaser/59db94db0270c.jpg);">
        <div class="container-fluid">
            <div class="container-inner">
                <img class="rounded-circle media-object" src="{{ gravatarUrl(userProfile) }}">
                <h3 class="profile-header-user">
                    {{ userProfile.usernameCanonical }}
                </h3>
                <p class="profile-header-bio">{{ userProfile.bio ?? '' }}</p>
            </div>
        </div>
        <nav class="profile-header-nav">
            <ul class="nav nav-tabs justify-content-center">
                <li class="nav-item">
                    <a class="nav-link active" href="#">{{ 'profile.tabs.photos'|trans }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">{{ 'profile.tabs.rides'|trans }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">{{ 'profile.tabs.tracks'|trans }}</a>
                </li>
            </ul>
        </nav>
    </div>
{% endblock %}

{% extends 'Template/StandardTemplate.html.twig' %}{% block title %}{{ thread.title }}{% endblock %}

{% import 'Bootstrap/bootstrap_macros.html.twig' as bootstrap %}

{% block breadcrumb %}
    {{ bootstrap.breadcrumb_item('Diskussionen', path('caldera_criticalmass_board_overview')) }}
    {{ bootstrap.breadcrumb_item(board.title, objectPath(board)) }}
    {{ bootstrap.breadcrumb_item(thread.title, '', true) }}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                {% if app.getUser() %}
                    <button type="button" class="btn btn-primary pull-right mt-2" data-toggle="modal" data-target="#modal-add-post">
                        <i class="far fa-comment"></i>
                        Antwort hinzuf√ºgen
                    </button>
                    {{ render(controller('App\\Controller\\PostController::writeThreadAction', { 'threadId': thread.id, 'noButton': true })) }}
                {% endif %}
                <h2>
                    {{ thread.title }}
                </h2>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="post-list">
                    {% for post in posts %}
                        {% include('Post/post.html.twig') with { 'post':  post } %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% extends 'Template/StandardTemplate.html.twig' %}
{% import 'Template/Macros/breadcrumb.html.twig' as breadcrumb %}

{% block title %}Diskussionen{% endblock %}

{% block breadcrumb %}
    {{ breadcrumb.active('Diskussionen') }}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">
                <i class="far fa-comments text-muted me-2"></i>
                Diskussionen
            </h1>
        </div>

        <h4 class="mb-3">
            <i class="far fa-globe text-muted me-2"></i>
            Allgemeines
        </h4>

        {% for board in boards %}
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-5">
                            <a href="{{ object_path(board) }}" class="text-decoration-none">
                                <h5 class="mb-1">{{ board.title }}</h5>
                            </a>
                            <small class="text-muted">{{ board.description }}</small>
                        </div>
                        <div class="col-md-2 text-center d-none d-md-block">
                            <span class="d-block text-muted"><small>Themen</small></span>
                            <strong>{{ board.threadNumber }}</strong>
                        </div>
                        <div class="col-md-1 text-center d-none d-md-block">
                            <span class="d-block text-muted"><small>Beitr&auml;ge</small></span>
                            <strong>{{ board.postNumber }}</strong>
                        </div>
                        <div class="col-md-4">
                            {% if board.lastThread %}
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0 me-2">
                                        {% if board.lastThread.lastPost.user.imageName %}
                                            <img class="rounded-circle" width="40" height="40"
                                                 src="{{ vich_uploader_asset(board.lastThread.lastPost.user, 'imageFile')|imagine_filter('user_profile_photo_small') }}"
                                                 alt="{{ board.lastThread.lastPost.user.username }}"/>
                                        {% else %}
                                            <div class="rounded-circle bg-secondary bg-opacity-25 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                <i class="far fa-user text-secondary"></i>
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div class="flex-grow-1">
                                        <a href="{{ object_path(board.lastThread) }}" class="text-decoration-none">
                                            <strong>{{ board.lastThread.title }}</strong>
                                        </a>
                                        <br/>
                                        <small class="text-muted">
                                            von {{ board.lastThread.lastPost.user.username }}
                                            <i class="far fa-clock ms-1 me-1"></i>{{ board.lastThread.lastPost.dateTime|date('d.m.Y H:i', 'Europe/Berlin') }}
                                        </small>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}

        <h4 class="mb-3 mt-4">
            <i class="far fa-map-marker-alt text-muted me-2"></i>
            St&auml;dte
        </h4>

        {% for city in cities %}
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-5">
                            <a href="{{ object_path(city, 'caldera_criticalmass_board_listcitythreads') }}" class="text-decoration-none">
                                <h5 class="mb-1">{{ city.title }}</h5>
                            </a>
                            <small class="text-muted">{{ city.punchline }}</small>
                        </div>
                        <div class="col-md-2 text-center d-none d-md-block">
                            <span class="d-block text-muted"><small>Themen</small></span>
                            <strong>{{ city.threadNumber }}</strong>
                        </div>
                        <div class="col-md-1 text-center d-none d-md-block">
                            <span class="d-block text-muted"><small>Beitr&auml;ge</small></span>
                            <strong>{{ city.postNumber }}</strong>
                        </div>
                        <div class="col-md-4">
                            {% if city.lastThread %}
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0 me-2">
                                        {% if city.lastThread.lastPost.user.imageName %}
                                            <img class="rounded-circle" width="40" height="40"
                                                 src="{{ vich_uploader_asset(city.lastThread.lastPost.user, 'imageFile')|imagine_filter('user_profile_photo_small') }}"
                                                 alt="{{ city.lastThread.lastPost.user.username }}"/>
                                        {% else %}
                                            <div class="rounded-circle bg-secondary bg-opacity-25 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                <i class="far fa-user text-secondary"></i>
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div class="flex-grow-1">
                                        <a href="{{ object_path(city.lastThread) }}" class="text-decoration-none">
                                            <strong>{{ city.lastThread.title }}</strong>
                                        </a>
                                        <br/>
                                        <small class="text-muted">
                                            von {{ city.lastThread.lastPost.user.username }}
                                            <i class="far fa-clock ms-1 me-1"></i>{{ city.lastThread.lastPost.dateTime|date('d.m.Y H:i', 'Europe/Berlin') }}
                                        </small>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

<div class="row margin-bottom-medium">
    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
        {% if ride.location and ride.latitude and ride.longitude %}
            <div id="map-{{ ride.id }}"
                 class="map"
                 data-controller="map--map"
                 style="height: 150px;"
                 data-map--map-center-latitude-value="{{ ride.latitude }}"
                 data-map--map-center-longitude-value="{{ ride.longitude }}"
                 data-map--map-zoom-value="13"
                 data-map--map-lock-map-value="true"
                 data-map--map-marker-latitude-value="{{ ride.latitude }}"
                 data-map--map-marker-longitude-value="{{ ride.longitude }}"
                 data-map--map-marker-type-value="ride">
            </div>
        {% else %}
            <div id="map-{{ ride.city.id }}"
                 class="map"
                 data-controller="map--map"
                 style="height: 150px;"
                 data-map--map-center-latitude-value="{{ ride.city.latitude }}"
                 data-map--map-center-longitude-value="{{ ride.city.longitude }}"
                 data-map--map-zoom-value="13"
                 data-map--map-lock-map-value="true"
                 data-map--map-marker-latitude-value="{{ ride.city.latitude }}"
                 data-map--map-marker-longitude-value="{{ ride.city.longitude }}"
                 data-map--map-marker-type-value="city">
            </div>
        {% endif %}
    </div>

    <div class="col-xs-12 col-sm-12 col-md-7 col-lg-7">
        <div class="row">
            <div class="col-md-12">
                <a href="{{ object_path(ride) }}">
                    <h4>
                        {{ ride.title }}
                    </h4>
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <dl>
                    <dt>
                        Datum:
                    </dt>

                    <dd>
                        {{ ride.dateTime|date('d.m.Y', ride.city.timezone) }}
                    </dd>
                </dl>
            </div>

            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <dl>
                    <dt>
                        Uhrzeit:
                    </dt>

                    <dd>
                        {{ ride.dateTime|date('H:i', ride.city.timezone) }} Uhr
                    </dd>
                </dl>
            </div>

            {% if ride.location and ride.latitude and ride.longitude %}
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                    <dl>
                        <dt>
                            Treffpunkt:
                        </dt>

                        <dd>
                            {{ ride.location }}
                        </dd>
                    </dl>
                </div>
            {% endif %}
        </div>
    </div>
</div>

{% extends 'Template/StandardTemplate.html.twig' %}
{% import 'Template/Macros/breadcrumb.html.twig' as breadcrumb %}

{% block title %}{{ 'profile.color.title'|trans }}{% endblock %}

{% block breadcrumb %}
    {{ breadcrumb.item('profile.manage.breadcrumb'|trans, path('criticalmass_user_usermanagement')) }}
    {{ breadcrumb.active('profile.color.breadcrumb'|trans) }}
{% endblock %}

{% block content %}
    <div class="container">

        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <h2>
                    {{ 'profile.color.heading'|trans }}
                </h2>

                <p>
                    {{ 'profile.color.explanation'|trans }}
                </p>
            </div>
        </div>

        {{ form_start(profileColorForm) }}
        <div class="row">
            <div class="col-md-4 col-md-offset-4 text-center">
                {{ form_row(profileColorForm.color) }}
            </div>
        </div>

        <div class="row margin-top-medium">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="btn-group">
                    {{ form_widget(profileColorForm.submit, { label: 'common.save'|trans, attr: { class: 'btn btn-primary'}}) }}

                    <a href="{{ path('criticalmass_user_usermanagement') }}" class="btn btn-secondary">
                        {{ 'common.cancel'|trans }}
                    </a>
                </div>
            </div>
        </div>
        {{ form_end(profileColorForm) }}
    </div>
{% endblock %}

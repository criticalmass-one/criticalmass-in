<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="criticalmass_user_usermanagement" path="/profile/">
        <default key="_controller">App\Controller\Profile\ProfileManagementController::manageAction</default>
    </route>

    <route id="fos_user_profile_show" path="/profile/">
        <default key="_controller">App\Controller\Profile\ProfileManagementController::manageAction</default>
    </route>

    <route id="criticalmass_user_usermanagement_editusername" path="/profile/username">
        <default key="_controller">App\Controller\Profile\ProfileManagementController::editUsernameAction</default>
    </route>

    <route id="criticalmass_user_usermanagement_editemail" path="/profile/email">
        <default key="_controller">App\Controller\Profile\ProfileManagementController::editEmailAction</default>
    </route>

    <route id="criticalmass_user_participation_list" path="/profile/participation/list">
        <default key="_controller">App\Controller\Profile\ParticipationController::listAction</default>
    </route>

    <route id="criticalmass_user_participation_update" path="/profile/participation/{participationId/update">
        <default key="_controller">App\Controller\Profile\ParticipationController::updateAction</default>
    </route>

    <route id="criticalmass_user_participation_delete" path="/profile/participation/{participationId/delete">
        <default key="_controller">App\Controller\Profile\ParticipationController::deleteAction</default>
    </route>

    <route id="criticalmass_user_profile_photo" path="/profile/profilephoto">
        <default key="_controller">App\Controller\Profile\ProfilePhotoController::uploadAction</default>
    </route>

    <route id="criticalmass_user_profile_color" path="/profile/color">
        <default key="_controller">App\Controller\Profile\ColorController::colorAction</default>
    </route>

    <route id="criticalmass_user_profile_delete" path="/profile/delete">
        <default key="_controller">App\Controller\Profile\ProfileDeletionController::deleteAction</default>
    </route>
</routes>
